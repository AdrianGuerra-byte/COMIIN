---
import Analytics from '@vercel/analytics/astro'
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>404 | COMIIN 2026</title>
    <meta name="robots" content="noindex, nofollow" />
    <link
      href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@300;400;500&display=swap"
      rel="stylesheet"
    />
    <Analytics/>
  </head>
  <body>
    <div class="container">
      <div class="hallway">
        <div class="wall wall-left"></div>
        <div class="wall wall-right"></div>
        <div class="floor"></div>
        <div class="ceiling"></div>
      </div>

      <div class="content">
        <div class="terminal">
          <div class="status-bar">
            <span class="status-text">SISTEMA_NAVEGACION</span>
            <span class="time" id="time">00:00:00</span>
          </div>

          <div class="output">
            <p class="line">
              <span class="prompt">&gt;</span>
              <span class="command">UBICACIÓN_SOLICITADA:</span>
              <span class="value error">NO_ENCONTRADA</span>
            </p>
            <p class="line">
              <span class="prompt">&gt;</span>
              <span class="command">CÓDIGO_ERROR:</span>
              <span class="value">404</span>
            </p>
            <p class="line">
              <span class="prompt">&gt;</span>
              <span class="command">NIVEL_ACTUAL:</span>
              <span class="value glitch" id="level">DESCONOCIDO</span>
            </p>
            <p class="line">
              <span class="prompt">&gt;</span>
              <span class="command">COORDENADAS:</span>
              <span class="value" id="coords">NULL NULL NULL</span>
            </p>
            <p class="line blank"></p>
            <p class="line message">
              Ha entrado en un espacio que no está indexado en este universo.
            </p>
            <p class="line message">
              El vacío se extiende indefinidamente.
            </p>
            <p class="line message">No hay salida visible.</p>
            <p class="line blank"></p>
            <p class="line warning">
              <span class="prompt">&gt;</span>
              <span class="command">ALERTA_CRÍTICA:</span>
              <span class="value error" id="alert">EQUIPO_DE_DESARROLLO_NOTIFICADO</span>
            </p>
            <p class="line message warning-msg">
              El equipo de desarrollo ha sido contactado.
            </p>
            <p class="line message warning-msg">
              Ellos saben que estás aquí.
            </p>
            <p class="line blank"></p>
            <p class="line">
              <span class="prompt">&gt;</span>
              <span class="command">OPCIONES_DISPONIBLES:</span>
            </p>
          </div>

          <div class="actions">
            <a href="/" class="button">
              <span class="button-bracket">[</span>
              <span class="button-text">SALIR</span>
              <span class="button-bracket">]</span>
            </a>
            <button onclick="history.back()" class="button">
              <span class="button-bracket">[</span>
              <span class="button-text">RETROCEDER</span>
              <span class="button-bracket">]</span>
            </button>
          </div>

          <div class="footer">
            <span class="blink">_</span>
          </div>
        </div>
      </div>

      <div class="noise"></div>
      <div class="vignette"></div>
    </div>

    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      :root {
        --bg: #0d0f12;
        --wall: #1a1d24;
        --floor: #12151a;
        --text: #c9d1d9;
        --text-dim: #7d8590;
        --accent: #58a6ff;
        --error: #ff7b72;
        --green: #7ee787;
      }

      body {
        font-family: "IBM Plex Mono", monospace;
        background: var(--bg);
        color: var(--text);
        overflow: hidden;
        height: 100vh;
        cursor: default;
      }

      .container {
        position: relative;
        width: 100vw;
        height: 100vh;
        overflow: hidden;
      }

      /* Efecto espacio liminal */
      .hallway {
        position: absolute;
        inset: 0;
        perspective: 800px;
        transform-style: preserve-3d;
        background: var(--bg);
      }

      .wall {
        position: absolute;
        background: linear-gradient(
          to bottom,
          var(--wall) 0%,
          #14171e 50%,
          var(--floor) 100%
        );
      }

      .wall-left {
        top: 0;
        left: 0;
        width: 50%;
        height: 100%;
        transform: rotateY(15deg);
        transform-origin: right center;
        border-right: 1px solid rgba(88, 166, 255, 0.05);
      }

      .wall-right {
        top: 0;
        right: 0;
        width: 50%;
        height: 100%;
        transform: rotateY(-15deg);
        transform-origin: left center;
        border-left: 1px solid rgba(88, 166, 255, 0.05);
      }

      .floor {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        height: 50%;
        background: linear-gradient(
          to bottom,
          transparent 0%,
          var(--floor) 40%,
          #0a0c0f 100%
        );
        transform: rotateX(60deg);
        transform-origin: center bottom;
      }

      .ceiling {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 50%;
        background: linear-gradient(
          to top,
          transparent 0%,
          var(--wall) 40%,
          #0a0c0f 100%
        );
        transform: rotateX(-60deg);
        transform-origin: center top;
      }

      /* Contenido del Terminal */
      .content {
        position: relative;
        z-index: 10;
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100vh;
        padding: 2rem;
      }

      .terminal {
        max-width: 700px;
        width: 100%;
        background: rgba(13, 15, 18, 0.85);
        border: 1px solid rgba(88, 166, 255, 0.2);
        box-shadow:
          0 0 60px rgba(0, 0, 0, 0.8),
          inset 0 0 100px rgba(0, 0, 0, 0.3);
        padding: 2rem;
        backdrop-filter: blur(10px);
      }

      .status-bar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-bottom: 1rem;
        margin-bottom: 2rem;
        border-bottom: 1px solid rgba(88, 166, 255, 0.2);
        font-size: 0.75rem;
        letter-spacing: 0.1em;
      }

      .status-text {
        color: var(--accent);
      }

      .time {
        color: var(--text-dim);
        font-variant-numeric: tabular-nums;
      }

      .output {
        margin-bottom: 2rem;
      }

      .line {
        margin-bottom: 0.5rem;
        font-size: 0.9rem;
        line-height: 1.6;
      }

      .line.blank {
        height: 0.5rem;
      }

      .prompt {
        color: var(--green);
        margin-right: 0.5rem;
      }

      .command {
        color: var(--accent);
        margin-right: 0.5rem;
      }

      .value {
        color: var(--text);
      }

      .value.error {
        color: var(--error);
      }

      .glitch {
        position: relative;
        animation: glitch 3s infinite;
      }

      @keyframes glitch {
        0%,
        90%,
        100% {
          transform: translate(0);
          opacity: 1;
        }
        92% {
          transform: translate(-2px, 0);
          opacity: 0.8;
        }
        94% {
          transform: translate(2px, 0);
          opacity: 0.8;
        }
        96% {
          transform: translate(-2px, 0);
          opacity: 1;
        }
      }

      .message {
        color: var(--text-dim);
        font-size: 0.85rem;
        padding-left: 1.5rem;
      }

      .warning-msg {
        color: var(--error);
        animation: pulse-warning 2s infinite;
      }

      @keyframes pulse-warning {
        0%, 100% {
          opacity: 0.7;
        }
        50% {
          opacity: 1;
        }
      }

      .line.warning {
        border-left: 2px solid var(--error);
        padding-left: 0.5rem;
        margin-left: -0.5rem;
        background: rgba(255, 123, 114, 0.05);
      }

      .actions {
        display: flex;
        gap: 1rem;
        margin-bottom: 1.5rem;
      }

      .button {
        background: transparent;
        border: 1px solid rgba(88, 166, 255, 0.3);
        color: var(--accent);
        padding: 0.75rem 1.5rem;
        font-family: "IBM Plex Mono", monospace;
        font-size: 0.85rem;
        cursor: pointer;
        transition: all 0.2s ease;
        text-decoration: none;
        display: inline-block;
        letter-spacing: 0.05em;
      }

      .button:hover {
        background: rgba(88, 166, 255, 0.1);
        border-color: var(--accent);
        box-shadow: 0 0 20px rgba(88, 166, 255, 0.2);
      }

      .button-bracket {
        color: var(--text-dim);
      }

      .button-text {
        margin: 0 0.25rem;
      }

      .footer {
        text-align: left;
        color: var(--green);
      }

      .blink {
        animation: blink 1s infinite;
      }

      @keyframes blink {
        0%,
        49% {
          opacity: 1;
        }
        50%,
        100% {
          opacity: 0;
        }
      }

      /* Visual Effects */
      .noise {
        position: fixed;
        inset: 0;
        background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' /%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)' opacity='0.05'/%3E%3C/svg%3E");
        pointer-events: none;
        z-index: 100;
        opacity: 0.5;
        animation: noise 0.2s infinite;
      }

      @keyframes noise {
        0% {
          transform: translate(0, 0);
        }
        10% {
          transform: translate(-5%, -5%);
        }
        20% {
          transform: translate(-10%, 5%);
        }
        30% {
          transform: translate(5%, -10%);
        }
        40% {
          transform: translate(-5%, 15%);
        }
        50% {
          transform: translate(-10%, 5%);
        }
        60% {
          transform: translate(15%, 0);
        }
        70% {
          transform: translate(0, 10%);
        }
        80% {
          transform: translate(-15%, 0);
        }
        90% {
          transform: translate(10%, 5%);
        }
        100% {
          transform: translate(5%, 0);
        }
      }

      .vignette {
        position: fixed;
        inset: 0;
        background: radial-gradient(
          ellipse at center,
          transparent 0%,
          transparent 50%,
          rgba(0, 0, 0, 0.8) 100%
        );
        pointer-events: none;
        z-index: 99;
      }

      /* Responsive */
      @media (max-width: 768px) {
        .terminal {
          padding: 1.5rem;
          font-size: 0.85rem;
        }

        .actions {
          flex-direction: column;
        }

        .button {
          width: 100%;
          text-align: center;
        }

        .wall-left,
        .wall-right {
          width: 35%;
        }
      }

      @media (max-width: 480px) {
        .line {
          font-size: 0.8rem;
        }

        .terminal {
          padding: 1rem;
        }
      }

      /* Accessibility */
      @media (prefers-reduced-motion: reduce) {
        *,
        *::before,
        *::after {
          animation-duration: 0.01ms !important;
          animation-iteration-count: 1 !important;
          transition-duration: 0.01ms !important;
        }
      }
    </style>

    <script>
      // Time counter
      let seconds = 0;
      const timeElement = document.getElementById("time");

      function updateTime() {
        seconds++;
        const hours = Math.floor(seconds / 3600);
        const minutes = Math.floor((seconds % 3600) / 60);
        const secs = seconds % 60;

        if (timeElement) {
          timeElement.textContent = `${String(hours).padStart(2, "0")}:${String(minutes).padStart(2, "0")}:${String(secs).padStart(2, "0")}`;
        }
      }

      setInterval(updateTime, 1000);

      // Glitching coordinates
      const coordsElement = document.getElementById("coords");
      const levelElement = document.getElementById("level");
      const alertElement = document.getElementById("alert");
      const glitchValues = [
        "NULL",
        "ERR",
        "VOID",
        "---",
        "???",
        "UNKNOWN",
        "UNDEFINED",
      ];
      const levels = [
        "NIVEL_0",
        "NIVEL_?",
        "SUBSÓTANO",
        "LIMINAL",
        "DESCONOCIDO",
        "ERROR",
      ];
      const alertMessages = [
        "EQUIPO_DE_DESARROLLO_NOTIFICADO",
        "RASTREANDO_UBICACIÓN",
        "CONTACTO_ESTABLECIDO",
        "OBSERVANDO",
        "REGISTRANDO_ACTIVIDAD",
        "TE_ESTAMOS_VIENDO",
      ];

      function updateCoords() {
        if (coordsElement) {
          const randomCoord = () =>
            Math.random() > 0.5
              ? (Math.random() * 180 - 90).toFixed(4)
              : glitchValues[Math.floor(Math.random() * glitchValues.length)];

          coordsElement.textContent = `${randomCoord()} ${randomCoord()} ${randomCoord()}`;
        }

        if (levelElement && Math.random() > 0.7) {
          levelElement.textContent =
            levels[Math.floor(Math.random() * levels.length)];
        }

        if (alertElement && Math.random() > 0.6) {
          alertElement.textContent =
            alertMessages[Math.floor(Math.random() * alertMessages.length)];
        }
      }

      setInterval(updateCoords, 2000);

      // Subtle ambient sound simulation (visual only)
      const container = document.querySelector(".container");

      function randomFlicker() {
        if (container && Math.random() > 0.95) {
          (container as HTMLElement).style.filter = "brightness(0.7)";
          setTimeout(() => {
            if (container) {
              (container as HTMLElement).style.filter = "brightness(1)";
            }
          }, 50);
        }
      }

      setInterval(randomFlicker, 3000);
    </script>
    </body>
</html>
