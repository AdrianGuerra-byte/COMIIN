        /* ===== SECCIÓN SEDE PRINCIPAL ===== */
.sede-section {
    padding: clamp(3.5rem, 8vw, 5rem) clamp(1rem, 4vw, 2rem);
    background: linear-gradient(180deg, #f8f9fa 0%, #e9ecef 100%);
    min-height: 100vh;
}

.sede-section .container {
    max-width: 1200px;
    margin: 0 auto;
}

/* Header principal */
.section-header {
    text-align: center;
    margin-block-end: clamp(2.5rem, 6vw, 3.5rem);
}

.section-header h1 {
    font-size: clamp(1.85rem, 5vw, 2.5rem);
    font-weight: 700;
    color: #1F407F;
    margin-block-end: 0.75rem;
    position: relative;
    display: inline-block;
    padding-block-end: 0.85rem;
}

.section-header h1::after {
    content: "";
    position: absolute;
    inset-block-end: 0;
    inset-inline-start: 50%;
    transform: translateX(-50%);
    width: 80px;
    height: 4px;
    background: #1F407F;
    border-radius: 2px;
}

.section-header p {
    color: var(--text-light);
    font-size: clamp(0.95rem, 2.2vw, 1.05rem);
    margin-block-start: 1rem;
    max-width: 700px;
    margin-inline: auto;
    line-height: 1.6;
}

/* ===== LAYOUT PRINCIPAL ===== */
.sede-content {
    display: grid;
    grid-template-columns: 1.2fr 1fr;
    gap: clamp(2rem, 4vw, 3rem);
    align-items: start;
    max-width: 1200px;
    margin: 0 auto;
}

.sede-info {
    display: flex;
    flex-direction: column;
    gap: clamp(1.5rem, 3vw, 2rem);
}

/* ===== SECCIONES DE INFORMACIÓN ===== */
.info-section,
.contact-section,
.facilities-section {
    background: var(--white);
    padding: clamp(1.75rem, 4vw, 2.5rem);
    border-radius: 16px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    border-top: 4px solid #1F407F;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.info-section:hover,
.contact-section:hover,
.facilities-section:hover {
    box-shadow: 0 8px 30px rgba(31, 64, 127, 0.15);
    transform: translateY(-4px);
}

.subsection-title {
    margin-block-end: clamp(1.5rem, 3vw, 2rem);
}

.subsection-title h2 {
    font-size: clamp(1.35rem, 3.5vw, 1.6rem);
    color: #1F407F;
    font-weight: 700;
    margin-block-end: 0.5rem;
}

.subsection-title p,
.subsection-title address {
    color: var(--text-light);
    font-size: clamp(0.9rem, 2vw, 0.95rem);
    line-height: 1.5;
    font-style: normal;
}

/* ===== DETAIL ITEMS ===== */
.detail-item {
    display: flex;
    align-items: flex-start;
    gap: 1.25rem;
    margin-block-end: 1.25rem;
    padding: clamp(1.25rem, 3vw, 1.5rem);
    background: linear-gradient(135deg, rgba(1, 51, 103, 0.02), rgba(0, 86, 179, 0.03));
    border-radius: 12px;
    border: 1px solid rgba(1, 51, 103, 0.08);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.detail-item:last-child {
    margin-block-end: 0;
}

.detail-item:hover {
    transform: translateX(8px);
    box-shadow: 0 6px 20px rgba(31, 64, 127, 0.12);
    border-color: rgba(31, 64, 127, 0.15);
}

.icon-wrapper {
    flex-shrink: 0;
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #1F407F;
    color: var(--white);
    border-radius: 12px;
    font-size: 1.25rem;
    box-shadow: 0 4px 12px rgba(31, 64, 127, 0.2);
}

.detail-content h3 {
    margin-block-end: 0.75rem;
    color: #1F407F;
    font-weight: 600;
    font-size: clamp(1rem, 2.2vw, 1.1rem);
}

.detail-content p {
    color: var(--text-color);
    margin: 0;
    line-height: 1.6;
    font-size: clamp(0.9rem, 2vw, 0.95rem);
}

.address-box {
    background: rgba(34, 145, 198, 0.08);
    padding: clamp(1rem, 2.5vw, 1.25rem);
    border-radius: 10px;
    border-inline-start: 4px solid #2291C6;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    font-style: normal;
    color: var(--text-color);
    line-height: 1.6;
    font-size: clamp(0.9rem, 2vw, 0.95rem);
}

/* ===== CONTACTO ===== */
.contact-links {
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.contact-link {
    display: flex;
    align-items: center;
    gap: 1.2rem;
    color: var(--text-color);
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    padding: clamp(1rem, 2.5vw, 1.25rem);
    background: linear-gradient(135deg, rgba(1, 51, 103, 0.02), rgba(0, 86, 179, 0.03));
    border-radius: 12px;
    border: 2px solid rgba(1, 51, 103, 0.08);
}

.contact-link:hover {
    background: linear-gradient(135deg, rgba(31, 64, 127, 0.06), rgba(34, 145, 198, 0.08));
    color: #1F407F;
    transform: translateX(8px);
    border-color: #1F407F;
    box-shadow: 0 4px 15px rgba(31, 64, 127, 0.12);
}

.contact-link i:first-child {
    color: #1F407F;
    font-size: 1.2rem;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(31, 64, 127, 0.12);
    border-radius: 10px;
    flex-shrink: 0;
    transition: all 0.3s ease;
}

.contact-link:hover i:first-child {
