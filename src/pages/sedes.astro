---
import Layout from "../layouts/Layout.astro"
---
<Layout>
<section class="sede-section" id="sede">
  <div class="container">
    <header class="section-header">
      <h1>Sede y Alojamiento</h1>
      <p>Descubre el epicentro de nuestro congreso y las opciones de hospedaje recomendadas.</p>
    </header>
  </div>
  
  <div class="sede-content-grid">
    <!-- Columna Izquierda: Información -->
    <aside class="sede-info-col" aria-label="Información de la sede">
      <!-- Tarjeta de Información General -->
      <article class="card info-card">
        <header class="card-header">
          <i class="fas fa-university card-icon"></i>
          <h2>Sede Principal: CUH</h2>
        </header>
        <div class="card-body">
          <div class="info-item">
            <i class="fas fa-map-marker-alt info-icon"></i>
            <div>
              <strong>Ubicación</strong>
              <p>Guanajuato, Blvd. del Minero 305, Javier Rojo Gómez, 42030 Pachuca de Soto, Hgo.</p>
            </div>
          </div>
          <div class="info-item">
            <i class="fas fa-calendar-alt info-icon"></i>
            <div>
              <strong>Fechas</strong>
              <p>28, 29 y 30 de Mayo, 2026</p>
            </div>
          </div>
          <div class="info-item">
            <i class="fas fa-info-circle info-icon"></i>
            <div>
              <strong>Modalidad</strong>
              <p>Presencial</p>
            </div>
          </div>
        </div>
      </article>

      <!-- Tarjeta de Instalaciones -->
      <article class="card facilities-card">
        <header class="card-header">
          <i class="fas fa-building card-icon"></i>
          <h2>Instalaciones Destacadas</h2>
        </header>
        <div class="card-body">
          <div class="facilities-grid">
            <div class="facility-item">
              <i class="fas fa-wifi"></i>
              <span>WiFi Gratuito</span>
            </div>
            <div class="facility-item">
              <i class="fas fa-utensils"></i>
              <span>Cafetería</span>
            </div>
            <div class="facility-item">
              <i class="fas fa-parking"></i>
              <span>Estacionamiento</span>
            </div>
            <div class="facility-item">
              <i class="fas fa-book"></i>
              <span>Biblioteca</span>
            </div>
            <div class="facility-item">
              <i class="fas fa-desktop"></i>
              <span>Aulas Multimedia</span>
            </div>
            <div class="facility-item">
              <i class="fas fa-flask"></i>
              <span>Laboratorios</span>
            </div>
          </div>
        </div>
      </article>
    </aside>

    <!-- Columna Derecha: Mapa CUH -->
    <section class="sede-map-col" aria-labelledby="map-title">
      <div class="card map-card">
        <header class="card-header">
          <i class="fas fa-map-marked-alt card-icon"></i>
          <h2 id="map-title">Ubicación CUH</h2>
        </header>
        <div class="card-body">
          <div class="map-container">
            <iframe 
              src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d30869.193521741978!2d-98.7793379!3d20.1152324!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x85d10a032d4ddb1b%3A0xf397144c38bcb070!2sCentro%20Universitario%20Hidalguense!5e1!3m2!1ses-419!2smx!4v1759688782837!5m2!1ses-419!2smx" 
              loading="lazy" 
              referrerpolicy="no-referrer-when-downgrade"
              title="Mapa de ubicación del Centro Universitario Hidalguense">
            </iframe>
          </div>
          <a href="https://maps.app.goo.gl/XFRLHx5oapBK5eyX7" target="_blank" rel="noopener noreferrer" class="btn-map">
            <i class="fas fa-directions"></i>
            Abrir en Google Maps
          </a>
        </div>
      </div>
    </section>
  </div>

  <!-- Sección de Hoteles -->
  <div class="hotel-grid">
    <!-- Hotel Emily -->
    <article class="card hotel-card">
      <div class="hotel-card-header">
        <img src="/logos/emily.avif" alt="Logo Hotel Emily" class="hotel-logo"/>
        <h3>Hotel Emily</h3>
      </div>
      <div class="card-body">
        <div class="info-item">
          <i class="fas fa-map-marker-alt info-icon"></i>
          <div>
            <strong>Ubicación</strong>
            <p>Plaza Independencia s/n, Col. Centro, Pachuca, Hgo.</p>
          </div>
        </div>
        <details class="reservation-details">
          <summary>
            <span>Reservar con Clave</span>
            <i class="fas fa-chevron-down"></i>
          </summary>
          <div class="reservation-content">
            <p>Usa la clave al hacer tu reservación.</p>
            <div class="key-badge">COMIIN26</div>
            <a href="https://wa.me/527717474762?text=Hola,%20me%20gustar%C3%ADa%20reservar%20en%20Hotel%20Emily%20con%20la%20clave%20COMIIN26." target="_blank" rel="noopener noreferrer" class="btn-whatsapp">
              <i class="fab fa-whatsapp"></i>
              Contactar por WhatsApp
            </a>
          </div>
        </details>
      </div>
    </article>
    
    <!-- Hotel Ciros -->
    <article class="card hotel-card">
      <div class="hotel-card-header">
        <img src="/logos/ciros.avif" alt="Logo Hotel Ciros" class="hotel-logo"/>
        <h3>Hotel Ciros</h3>
      </div>
      <div class="card-body">
        <div class="info-item">
          <i class="fas fa-map-marker-alt info-icon"></i>
          <div>
            <strong>Ubicación</strong>
            <p>Plaza Independencia 110, Col. Centro, Pachuca, Hgo.</p>
          </div>
        </div>
        <details class="reservation-details">
          <summary>
            <span>Reservar con Clave</span>
            <i class="fas fa-chevron-down"></i>
          </summary>
          <div class="reservation-content">
            <p>Usa la clave al hacer tu reservación.</p>
            <div class="key-badge">COMIIN26</div>
            <a href="https://wa.me/527717474762?text=Hola,%20me%20gustar%C3%ADa%20reservar%20en%20Hotel%20Ciros%20con%20la%20clave%20COMIIN26." target="_blank" rel="noopener noreferrer" class="btn-whatsapp">
              <i class="fab fa-whatsapp"></i>
              Contactar por WhatsApp
            </a>
          </div>
        </details>
      </div>
    </article>
  </div>
</section>
</Layout>

<style>
/* ===================================
   BASE Y LAYOUT DE SECCIÓN
   =================================== */
.sede-section {
    padding: clamp(2rem, 8vw, 5rem) clamp(1rem, 4vw, 2rem);
    background: #f4f7fc;
    min-height: 100vh;
}

.container {
    max-width: 1200px;
    margin: 0 auto;
}

.section-header {
    text-align: center;
    margin-bottom: clamp(2.5rem, 6vw, 4rem);
    animation: fadeInDown 0.5s ease-out;
}

.section-header h1 {
    font-size: clamp(2rem, 5vw, 2.8rem);
    font-weight: 800;
    color: var(--primary-color);
    margin-bottom: 0.75rem;
}

.section-header p {
    color: var(--text-light);
    font-size: clamp(1rem, 2.5vw, 1.15rem);
    max-width: 650px;
    margin: 0 auto;
}

/* ===================================
   TARJETA (CARD) BASE
   =================================== */
.card {
    background: var(--white);
    border-radius: 16px;
    box-shadow: 0 4px 15px rgba(0, 30, 80, 0.05);
    border: 1px solid #e0e8f3;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    display: flex;
    flex-direction: column;
    height: 100%;
    animation: fadeInUp 0.5s ease-out backwards;
}

.card:hover {
    transform: translateY(-6px);
    box-shadow: 0 10px 30px rgba(0, 30, 80, 0.1);
}

.card-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1.5rem;
    border-bottom: 1px solid #e0e8f3;
}

.card-header h2 {
    font-size: 1.35rem;
    color: var(--primary-color);
    font-weight: 700;
    margin: 0;
}

.card-icon {
    font-size: 1.5rem;
    color: var(--primary-color);
}

.card-body {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
    flex-grow: 1;
}

/* ===================================
   GRID PRINCIPAL (SEDE + MAPA)
   =================================== */
.sede-content-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: clamp(1.5rem, 4vw, 2.5rem);
    margin-bottom: clamp(2.5rem, 6vw, 4rem);
}

.sede-info-col, .sede-map-col {
    display: flex;
    flex-direction: column;
    gap: clamp(1.5rem, 4vw, 2.5rem);
}

.sede-info-col { animation-delay: 0.1s; }
.sede-map-col { animation-delay: 0.2s; }

/* ===================================
   TARJETAS DE INFORMACIÓN Y FACILIDADES
   =================================== */
.info-item {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
}

.info-icon {
    color: var(--secondary-color);
    font-size: 1.1rem;
    margin-top: 0.25rem;
    width: 20px;
    text-align: center;
}

.info-item div {
    font-size: 0.95rem;
}

.info-item strong {
    display: block;
    color: var(--dark-color);
    font-weight: 600;
    margin-bottom: 0.25rem;
}

.info-item p {
    color: var(--text-light);
    line-height: 1.6;
    margin: 0;
}

/* Facilidades */
.facilities-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
    gap: 1rem;
}

.facility-item {
    background: #f4f7fc;
    border-radius: 12px;
    padding: 1rem;
    text-align: center;
    font-size: 0.85rem;
    color: var(--text-light);
    transition: all 0.3s ease;
    border: 1px solid #e0e8f3;
}

.facility-item:hover {
    background: var(--white);
    transform: scale(1.05);
    box-shadow: 0 6px 15px rgba(0, 30, 80, 0.08);
}

.facility-item i {
    display: block;
    font-size: 1.75rem;
    color: var(--primary-color);
    margin-bottom: 0.5rem;
}

/* ===================================
   TARJETA DE MAPA
   =================================== */
.map-container {
    border-radius: 12px;
    overflow: hidden;
    height: 350px;
    position: relative;
    border: 1px solid #e0e8f3;
}

.map-container iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: 0;
}

.btn-map {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    width: 100%;
    padding: 0.9rem 1rem;
    background: var(--primary-color);
    color: var(--white);
    border: none;
    border-radius: 12px;
    text-decoration: none;
    font-weight: 600;
    font-size: 1rem;
    transition: all 0.3s ease;
}

.btn-map:hover {
    background: var(--secondary-color);
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(0, 50, 120, 0.2);
}

/* ===================================
   GRID Y TARJETAS DE HOTELES
   =================================== */
.hotel-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: clamp(1.5rem, 4vw, 2.5rem);
    margin-top: 2rem;
}

.hotel-card {
    animation-delay: 0.3s;
}

.hotel-card .card-body {
    justify-content: space-between;
}

.hotel-card-header {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: 1.5rem;
    border-bottom: 1px solid #e0e8f3;
}

.hotel-logo {
    height: 50px;
    width: auto;
    max-width: 150px;
    margin-bottom: 1rem;
}

.hotel-card-header h3 {
    font-size: 1.35rem;
    color: var(--primary-color);
    font-weight: 700;
    margin: 0;
}

/* Detalles de reservación */
.reservation-details {
    margin-top: 1rem;
}

.reservation-details summary {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.8rem 1.2rem;
    background: #f4f7fc;
    border-radius: 10px;
    cursor: pointer;
    user-select: none;
    list-style: none;
    font-weight: 600;
    color: var(--primary-color);
    transition: background 0.3s ease;
}

.reservation-details summary::-webkit-details-marker { display: none; }

.reservation-details summary:hover {
    background: #e9eef5;
}

.reservation-details summary i {
    transition: transform 0.3s ease;
}

.reservation-details[open] summary i {
    transform: rotate(180deg);
}

.reservation-content {
    padding: 1.5rem 1rem 1rem 1rem;
    text-align: center;
    animation: slideDown 0.3s ease-out;
}

.reservation-content p {
    font-size: 0.9rem;
    color: var(--text-light);
    margin-bottom: 1rem;
}

.key-badge {
    display: inline-block;
    background: var(--primary-color);
    color: var(--white);
    padding: 0.6rem 1.5rem;
    border-radius: 50px;
    font-size: 1.1rem;
    font-weight: 700;
    letter-spacing: 2px;
    margin-bottom: 1.5rem;
    user-select: all;
    animation: pulse 2s ease-in-out infinite;
}

.btn-whatsapp {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    width: 100%;
    padding: 0.9rem 1rem;
    background: #25D366;
    color: var(--white);
    border-radius: 12px;
    text-decoration: none;
    font-weight: 600;
    font-size: 0.95rem;
    transition: all 0.3s ease;
}

.btn-whatsapp:hover {
    background: #20BA5A;
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(37, 211, 102, 0.3);
}

/* ===================================
   ANIMACIONES
   =================================== */
@keyframes fadeInDown {
    from { opacity: 0; transform: translateY(-20px); }
    to { opacity: 1; transform: translateY(0); }
}

@keyframes fadeInUp {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
}

@keyframes slideDown {
    from { opacity: 0; transform: translateY(-10px); }
    to { opacity: 1; transform: translateY(0); }
}

@keyframes pulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.05); }
}

/* ===================================
   ACCESIBILIDAD Y REDUCED MOTION
   =================================== */
@media (prefers-reduced-motion: reduce) {
    *, *::before, *::after {
        animation-duration: 0.01ms !important;
        animation-iteration-count: 1 !important;
        transition-duration: 0.01ms !important;
    }
}
</style>
