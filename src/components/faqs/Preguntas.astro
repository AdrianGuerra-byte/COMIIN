        /* ==== SECCIÓN PREGUNTAS FRECUENTES ==== */
.faq-section {
    padding: 80px 5%;
    background: #f8f9fa;
    position: relative;
}

.faq-container {
    max-width: 1000px;
    margin: 0 auto;
    background: #ffffff;
    border-radius: 15px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    padding: 50px;
    border: 1px solid rgba(0, 0, 0, 0.08);
}

.faq-container .section-title {
    text-align: center;
    margin-bottom: 50px;
}

.faq-container .section-title h2 {
    font-size: 2.5rem;
    color: #1F407F;
    font-weight: 700;
    margin-bottom: 15px;
    position: relative;
}

.faq-container .section-title h2::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 80px;
    height: 3px;
    background: #2291C6;
}

/* Categorías */
.faq-categories {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 15px;
    margin-bottom: 40px;
}

.category-btn {
    background: #ffffff;
    border: 2px solid #1F407F;
    padding: 12px 25px;
    border-radius: 50px;
    font-weight: 600;
    color: #1F407F;
    cursor: pointer;
    transition: all 0.3s ease;
    font-size: 1rem;
}

.category-btn.active, 
.category-btn:hover {
    background: #1F407F;
    color: #ffffff;
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(31, 64, 127, 0.3);
}

/* Categorías de FAQ */
.faq-category {
    display: none;
    animation: fadeIn 0.5s ease;
}

.faq-category.active {
    display: block;
}

/* Items de FAQ */
.faq-item {
    margin-bottom: 20px;
    border-radius: 10px;
    overflow: hidden;
    box-shadow: 0 3px 15px rgba(0, 0, 0, 0.08);
    border: 1px solid rgba(31, 64, 127, 0.1);
    background: #ffffff;
    transition: all 0.3s ease;
}

.faq-item:hover {
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.12);
}

.faq-question {
    padding: 20px 25px;
    background: rgba(31, 64, 127, 0.03);
    cursor: pointer;
    display: flex;
    justify-content: space-between;
    align-items: center;
    transition: all 0.3s ease;
    border-left: 4px solid #1F407F;
}

.faq-question:hover {
    background: rgba(31, 64, 127, 0.06);
}

.faq-question h3 {
    color: #1F407F;
    font-size: 1.2rem;
    font-weight: 600;
    margin: 0;
    flex: 1;
    line-height: 1.4;
}

.faq-icon {
    color: #2291C6;
    font-size: 1.2rem;
    transition: all 0.3s ease;
    margin-left: 15px;
}

.faq-item.active .faq-icon {
    transform: rotate(180deg);
}

.faq-answer {
    padding: 0;
    max-height: 0;
    overflow: hidden;
    transition: all 0.4s ease;
    background: #ffffff;
}

.faq-item.active .faq-answer {
    padding: 25px;
    max-height: 1000px;
}

.faq-answer p {
    margin-bottom: 15px;
    line-height: 1.7;
    color: #2c3e50;
    text-align: justify;
}

.faq-answer ul {
    margin: 15px 0 15px 20px;
    list-style-type: none;
}

.faq-answer li {
    margin-bottom: 8px;
    line-height: 1.6;
    position: relative;
    padding-left: 25px;
    color: #2c3e50;
}

.faq-answer li:before {
    content: '•';
    color: #2291C6;
    font-weight: bold;
    position: absolute;
    left: 0;
    font-size: 1.4rem;
    top: -2px;
}

.faq-answer strong {
    color: #1F407F;
    font-weight: 700;
}

/* Sección de contacto adicional */
.faq-contact {
    margin-top: 50px;
    padding: 30px;
    background: linear-gradient(135deg, #1F407F 0%, #2291C6 100%);
    border-radius: 12px;
    text-align: center;
    position: relative;
    overflow: hidden;
}

.faq-contact h3 {
    color: #ffffff;
    margin-bottom: 15px;
    font-size: 1.4rem;
    font-weight: 700;
    position: relative;
    z-index: 2;
}

.faq-contact p {
    margin-bottom: 20px;
    color: #ffffff;
    line-height: 1.6;
    position: relative;
    z-index: 2;
}

.contact-button {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    background: #ffffff;
    color: #1F407F;
    padding: 12px 30px;
    border-radius: 50px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    position: relative;
    z-index: 2;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
}

.contact-button:hover {
    background: #f8f9fa;
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.3);
}

.contact-button i {
    font-size: 1.1rem;
}

/* Animaciones */
@keyframes fadeIn {
    from { 
        opacity: 0; 
        transform: translateY(20px); 
    }
    to { 
        opacity: 1; 
        transform: translateY(0); 
    }
}

@keyframes slideDown {
    from {
        opacity: 0;
        max-height: 0;
    }
    to {
        opacity: 1;
        max-height: 1000px;
    }
}

.faq-item.active .faq-answer {
    animation: slideDown 0.4s ease;
}

/* ==== RESPONSIVE DESIGN ==== */
@media (max-width: 1024px) {
    .faq-container {
        padding: 40px;
    }
    
    .faq-categories {
        gap: 12px;
    }
    
    .category-btn {
        padding: 10px 20px;
        font-size: 0.95rem;
    }
}

@media (max-width: 768px) {
    .faq-section {
        padding: 60px 5%;
    }
    
    .faq-container {
        padding: 30px 25px;
    }
    
    .faq-container .section-title h2 {
        font-size: 2rem;
    }
    
    .faq-categories {
        flex-direction: column;
        align-items: center;
    }
    
    .category-btn {
        width: 100%;
        max-width: 300px;
        text-align: center;
    }
    
    .faq-question {
        padding: 18px 20px;
    }
    
    .faq-question h3 {
        font-size: 1.1rem;
    }
    
    .faq-item.active .faq-answer {
        padding: 20px;
    }
    
    .faq-contact {
        padding: 25px;
        margin-top: 40px;
    }
}

@media (max-width: 480px) {
    .faq-section {
        padding: 50px 5%;
    }
    
    .faq-container {
        padding: 25px 20px;
    }
    
    .faq-container .section-title h2 {
        font-size: 1.8rem;
    }
    
    .faq-question {
        padding: 15px 18px;
    }
    
    .faq-question h3 {
        font-size: 1rem;
    }
    
    .faq-icon {
        font-size: 1.1rem;
        margin-left: 10px;
    }
    
    .faq-item.active .faq-answer {
        padding: 18px;
    }
    
    .faq-answer li {
        padding-left: 20px;
        font-size: 0.95rem;
    }
    
    .faq-contact {
        padding: 20px;
        margin-top: 30px;
    }
    
    .contact-button {
        padding: 10px 25px;
        font-size: 0.95rem;
    }
}

/* Estados de accesibilidad */
.faq-question:focus {
    outline: 2px solid #2291C6;
    outline-offset: 2px;
}

.category-btn:focus {
    outline: 2px solid #2291C6;
    outline-offset: 2px;
}

/* Mejoras de rendimiento */
.faq-item {
    will-change: transform;
}

.faq-answer {
    will-change: max-height;
}
    </style>



<script>// Script para el menú móvil
document.addEventListener('DOMContentLoaded', function() {
    const mobileMenuBtn = document.querySelector('.mobile-menu-btn');
    const navLinks = document.querySelector('.nav-links');
    
    if (mobileMenuBtn) {
        mobileMenuBtn.addEventListener('click', function() {
            navLinks.classList.toggle('active');
        });
    }
    
    // Cerrar menú al hacer clic en un enlace
    const links = document.querySelectorAll('.nav-links a');
    links.forEach(link => {
        link.addEventListener('click', function() {
            navLinks.classList.remove('active');
        });
    });

    // Script para FAQs
    const faqItems = document.querySelectorAll('.faq-item');
    const categoryBtns = document.querySelectorAll('.category-btn');
    const faqCategories = document.querySelectorAll('.faq-category');

    // Funcionalidad para abrir/cerrar FAQs
    faqItems.forEach(item => {
        const question = item.querySelector('.faq-question');
        question.addEventListener('click', () => {
            item.classList.toggle('active');
        });
    });

    // Funcionalidad para cambiar categorías
    categoryBtns.forEach(btn => {
        btn.addEventListener('click', () => {
            const category = btn.getAttribute('data-category');
            
            // Remover clase active de todos los botones y categorías
            categoryBtns.forEach(b => b.classList.remove('active'));
            faqCategories.forEach(cat => cat.classList.remove('active'));
            
            // Agregar clase active al botón y categoría seleccionados
            btn.classList.add('active');
            document.getElementById(category).classList.add('active');
        });
    });
});</script>