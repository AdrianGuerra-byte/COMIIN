<style>
    /* Variables */
    :root {
        --primary-color: #013367;
        --secondary-color: #0056B3;
        --accent-color: #FFD700;
        --text-color: #333;
        --white: #fff;
        --light-bg: #f8f9fa;
        --gradient-bg: linear-gradient(135deg, #e9ecef 0%, #dee2e6 100%);
    }

    /* Sección Fechas */
    .fechas-section {
        padding-block: clamp(3.5rem, 8vw, 5rem);
        background: var(--gradient-bg);
        position: relative;
        overflow: hidden;
    }

    .fechas-section::before {
        content: '';
        position: absolute;
        inset: 0;
        background: radial-gradient(circle at 20% 50%, rgba(1, 51, 103, 0.03) 0%, transparent 50%),
                    radial-gradient(circle at 80% 50%, rgba(0, 86, 179, 0.03) 0%, transparent 50%);
        pointer-events: none;
    }

    .container {
        max-width: 1200px;
        margin-inline: auto;
        padding-inline: clamp(1rem, 4vw, 2rem);
        position: relative;
        z-index: 1;
    }

    /* Section Header */
    .section-header {
        text-align: center;
        margin-block-end: clamp(2.5rem, 6vw, 4rem);
        animation: fadeInUp 0.8s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .icon-wrapper {
        width: 80px;
        height: 80px;
        margin-inline: auto;
        margin-block-end: 1.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        background: linear-gradient(135deg, rgba(1, 51, 103, 0.1), rgba(0, 86, 179, 0.1));
        border: 3px solid var(--primary-color);
        color: var(--primary-color);
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .icon-wrapper:hover {
        transform: rotate(360deg) scale(1.1);
        background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
        color: var(--white);
    }

    .section-header h2 {
        font-size: clamp(1.85rem, 5vw, 2.5rem);
        font-weight: 700;
        color: var(--primary-color);
        margin-block-end: 0.75rem;
        text-wrap: pretty;
        position: relative;
        display: inline-block;
    }

    .section-header h2::after {
        content: '';
        position: absolute;
        bottom: -10px;
        left: 50%;
        transform: translateX(-50%);
        width: 60px;
        height: 4px;
        background: linear-gradient(90deg, var(--primary-color), var(--secondary-color));
        border-radius: 2px;
    }

    .section-subtitle {
        font-size: clamp(0.95rem, 2.2vw, 1.05rem);
        color: #666;
        margin-block-start: 1.25rem;
        text-wrap: pretty;
    }

    /* Timeline Container */
    .timeline {
        position: relative;
        max-width: 900px;
        margin-inline: auto;
        padding-block: 2rem;
    }

    /* Timeline Line - Desktop */
    .timeline::before {
        content: '';
        position: absolute;
        left: 50%;
        top: 0;
        bottom: 0;
        width: 4px;
        background: linear-gradient(180deg, 
            var(--primary-color) 0%, 
            var(--secondary-color) 50%, 
            var(--primary-color) 100%);
        transform: translateX(-50%);
        border-radius: 2px;
        box-shadow: 0 0 20px rgba(1, 51, 103, 0.2);
    }

    /* Timeline Item */
    .timeline-item {
        position: relative;
        display: flex;
        margin-block-end: clamp(2rem, 4vw, 3rem);
        opacity: 0;
        animation: fadeInUp 0.6s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    }

    .timeline-item:nth-child(odd) {
        justify-content: flex-end;
        padding-inline-end: calc(50% + 2.5rem);
    }

    .timeline-item:nth-child(even) {
        justify-content: flex-start;
        padding-inline-start: calc(50% + 2.5rem);
    }

    /* Timeline Marker */
    .timeline-marker {
        position: absolute;
        left: 50%;
        top: 1.5rem;
        transform: translateX(-50%);
        z-index: 2;
    }

    .timeline-dot {
        width: 20px;
        height: 20px;
        background: var(--white);
        border: 4px solid var(--primary-color);
        border-radius: 50%;
        box-shadow: 0 0 0 6px rgba(1, 51, 103, 0.1),
                    0 4px 12px rgba(1, 51, 103, 0.3);
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .timeline-item:hover .timeline-dot {
        transform: scale(1.3);
        background: var(--primary-color);
        box-shadow: 0 0 0 8px rgba(1, 51, 103, 0.15),
                    0 6px 16px rgba(1, 51, 103, 0.4);
    }

    .timeline-item.destacada .timeline-dot {
        background: var(--accent-color);
        border-color: var(--accent-color);
        box-shadow: 0 0 0 6px rgba(255, 215, 0, 0.2),
                    0 4px 16px rgba(255, 215, 0, 0.4);
        animation: pulse 2s infinite;
    }

    /* Timeline Card */
    .timeline-card {
        background: var(--white);
        border-radius: 16px;
        padding: clamp(1.5rem, 3vw, 2rem);
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        position: relative;
        overflow: hidden;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        width: 100%;
    }

    .timeline-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(90deg, var(--primary-color), var(--secondary-color));
        background-size: 200% 100%;
        background-position: 100% 0;
        transition: background-position 0.3s ease;
    }

    .timeline-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 32px rgba(1, 51, 103, 0.15);
    }

    .timeline-card:hover::before {
        background-position: 0 0;
    }

    .timeline-item.destacada .timeline-card {
        border: 2px solid var(--accent-color);
        background: linear-gradient(135deg, #fffef7 0%, var(--white) 100%);
    }

    .timeline-item.destacada .timeline-card::before {
        background: linear-gradient(90deg, var(--accent-color), #FFA500);
    }

    /* Timeline Header */
    .timeline-header {
        margin-block-end: 1rem;
    }

    .fecha-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        background: linear-gradient(135deg, rgba(1, 51, 103, 0.1), rgba(0, 86, 179, 0.1));
        color: var(--primary-color);
        padding: 0.6rem 1rem;
        border-radius: 30px;
        font-weight: 700;
        font-size: clamp(0.85rem, 2vw, 0.95rem);
        border: 2px solid var(--primary-color);
        transition: all 0.3s ease;
    }

    .fecha-badge:hover {
        background: var(--primary-color);
        color: var(--white);
        transform: scale(1.05);
    }

    .fecha-badge .icon-calendar {
        flex-shrink: 0;
    }

    .destacada-badge {
        background: linear-gradient(135deg, rgba(255, 215, 0, 0.2), rgba(255, 165, 0, 0.2));
        border-color: var(--accent-color);
        color: #b8860b;
    }

    .destacada-badge:hover {
        background: linear-gradient(135deg, var(--accent-color), #FFA500);
        color: var(--white);
    }

    /* Timeline Content */
    .timeline-content h3 {
        font-size: clamp(1.15rem, 3vw, 1.4rem);
        font-weight: 700;
        color: var(--primary-color);
        margin-block-end: 0.5rem;
        text-wrap: pretty;
    }

    .timeline-content p {
        font-size: clamp(0.9rem, 2vw, 0.98rem);
        color: #666;
        line-height: 1.6;
        margin: 0;
        text-wrap: pretty;
    }

    /* Evento Badge */
    .evento-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.4rem;
        background: linear-gradient(135deg, var(--accent-color), #FFA500);
        color: var(--white);
        padding: 0.4rem 0.9rem;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
        margin-block-start: 1rem;
        box-shadow: 0 4px 12px rgba(255, 215, 0, 0.3);
        animation: pulse 2s infinite;
    }

    .evento-badge svg {
        animation: rotate 4s linear infinite;
    }

    /* Animations */
    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @keyframes pulse {
        0%, 100% {
            transform: scale(1);
            opacity: 1;
        }
        50% {
            transform: scale(1.05);
            opacity: 0.9;
        }
    }

    @keyframes rotate {
        from {
            transform: rotate(0deg);
        }
        to {
            transform: rotate(360deg);
        }
    }

    /* Responsive Design */
    @media (max-width: 992px) {
        .timeline::before {
            left: 30px;
        }

        .timeline-item:nth-child(odd),
        .timeline-item:nth-child(even) {
            justify-content: flex-start;
            padding-inline-start: 4.5rem;
            padding-inline-end: 0;
        }

        .timeline-marker {
            left: 30px;
            transform: translateX(-50%);
        }
    }

    @media (max-width: 768px) {
        .timeline::before {
            left: 20px;
        }

        .timeline-marker {
            left: 20px;
        }

        .timeline-item:nth-child(odd),
        .timeline-item:nth-child(even) {
            padding-inline-start: 3.5rem;
        }

        .timeline-dot {
            width: 16px;
            height: 16px;
            border-width: 3px;
        }

        .fecha-badge {
            font-size: 0.8rem;
            padding: 0.5rem 0.8rem;
        }

        .fecha-badge .icon-calendar {
            width: 16px;
            height: 16px;
        }
    }

    @media (max-width: 480px) {
        .timeline-card {
            padding: 1.25rem;
        }

        .evento-badge {
            font-size: 0.75rem;
            padding: 0.3rem 0.7rem;
        }

        .evento-badge svg {
            width: 14px;
            height: 14px;
        }
    }
</style>