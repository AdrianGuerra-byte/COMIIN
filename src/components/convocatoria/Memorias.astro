    <style>
    /* Variables */
    :root {
        --primary-color: #013367;
        --secondary-color: #0056B3;
        --success-color: #28a745;
        --text-color: #333;
        --white: #fff;
        --light-bg: #f8f9fa;
        --gradient-bg: linear-gradient(135deg, #e9ecef 0%, #dee2e6 100%);
    }

    /* Sección Publicación */
    .publicacion-section {
        padding-block: clamp(3.5rem, 8vw, 5rem);
        background: var(--gradient-bg);
        position: relative;
        overflow: hidden;
    }

    .publicacion-section::before {
        content: '';
        position: absolute;
        inset: 0;
        background: radial-gradient(circle at 20% 50%, rgba(1, 51, 103, 0.03) 0%, transparent 50%),
                    radial-gradient(circle at 80% 50%, rgba(0, 86, 179, 0.03) 0%, transparent 50%);
        pointer-events: none;
    }

    .container {
        max-width: 1200px;
        margin-inline: auto;
        padding-inline: clamp(1rem, 4vw, 2rem);
        position: relative;
        z-index: 1;
    }

    /* Section Header */
    .section-header {
        text-align: center;
        margin-block-end: clamp(2rem, 5vw, 3rem);
        opacity: 0;
        animation: fadeInUp 0.8s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    }

    .icon-wrapper {
        width: 80px;
        height: 80px;
        margin-inline: auto;
        margin-block-end: 1.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        background: linear-gradient(135deg, rgba(1, 51, 103, 0.1), rgba(0, 86, 179, 0.1));
        border: 3px solid var(--primary-color);
        color: var(--primary-color);
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .icon-wrapper:hover {
        transform: rotate(360deg) scale(1.1);
        background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
        color: var(--white);
    }

    .section-header h2 {
        font-size: clamp(1.85rem, 5vw, 2.5rem);
        font-weight: 700;
        color: var(--primary-color);
        margin-block-end: 0.75rem;
        text-wrap: pretty;
        position: relative;
        display: inline-block;
    }

    .section-header h2::after {
        content: '';
        position: absolute;
        bottom: -10px;
        left: 50%;
        transform: translateX(-50%);
        width: 60px;
        height: 4px;
        background: linear-gradient(90deg, var(--primary-color), var(--secondary-color));
        border-radius: 2px;
    }

    .section-subtitle {
        font-size: clamp(0.95rem, 2.2vw, 1.05rem);
        color: #666;
        margin-block-start: 1.25rem;
        text-wrap: pretty;
    }

    /* Main Layout */
    .publicacion-layout {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: clamp(1.5rem, 3vw, 2.5rem);
        align-items: start;
    }

    /* Left Column - Info */
    .publicacion-info {
        display: flex;
        flex-direction: column;
        gap: clamp(1.5rem, 3vw, 2rem);
        opacity: 0;
        animation: fadeInLeft 0.8s cubic-bezier(0.4, 0, 0.2, 1) 0.2s forwards;
    }

    .info-card {
        background: var(--white);
        border-radius: 16px;
        padding: clamp(1.5rem, 3vw, 2rem);
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        position: relative;
        overflow: hidden;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .info-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(90deg, var(--primary-color), var(--secondary-color));
        background-size: 200% 100%;
        background-position: 100% 0;
        transition: background-position 0.3s ease;
    }

    .info-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 32px rgba(1, 51, 103, 0.15);
    }

    .info-card:hover::before {
        background-position: 0 0;
    }

    .info-header {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-block-end: 1.25rem;
    }

    .header-icon {
        width: 50px;
        height: 50px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        background: linear-gradient(135deg, rgba(1, 51, 103, 0.1), rgba(0, 86, 179, 0.1));
        color: var(--primary-color);
        flex-shrink: 0;
        transition: all 0.3s ease;
    }

    .info-card:hover .header-icon {
        transform: scale(1.1) rotate(5deg);
        background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
        color: var(--white);
    }

    .info-header h3 {
        font-size: clamp(1.2rem, 3vw, 1.4rem);
        font-weight: 700;
        color: var(--primary-color);
        margin: 0;
        text-wrap: pretty;
    }

    .info-content p {
        font-size: clamp(0.9rem, 2vw, 0.98rem);
        color: #666;
        line-height: 1.7;
        margin-block-end: 1rem;
        text-wrap: pretty;
    }

    .info-content p:last-child {
        margin-block-end: 0;
    }

    .info-content strong {
        color: var(--primary-color);
        font-weight: 600;
    }

    /* Revista Badges */
    .revista-badges {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
        margin-block-start: 1.5rem;
        padding-block-start: 1.5rem;
        border-top: 1px solid rgba(1, 51, 103, 0.1);
    }

    .revista-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        background: linear-gradient(135deg, #FFD700, #FFA500);
        color: var(--white);
        padding: 0.6rem 1.1rem;
        border-radius: 30px;
        font-weight: 700;
        font-size: 0.9rem;
        box-shadow: 0 4px 12px rgba(255, 215, 0, 0.3);
        transition: all 0.3s ease;
    }

    .revista-badge:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 16px rgba(255, 215, 0, 0.4);
    }

    .issn-badge {
        display: inline-flex;
        align-items: center;
        background: linear-gradient(135deg, rgba(1, 51, 103, 0.1), rgba(0, 86, 179, 0.1));
        color: var(--primary-color);
        padding: 0.6rem 1.1rem;
        border-radius: 30px;
        font-size: 0.9rem;
        font-weight: 600;
        border: 2px solid var(--primary-color);
    }

    /* Image Card */
    .imagen-card {
        opacity: 0;
        animation: fadeInLeft 0.8s cubic-bezier(0.4, 0, 0.2, 1) 0.4s forwards;
    }

    .imagen-wrapper {
        position: relative;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .imagen-wrapper:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 32px rgba(1, 51, 103, 0.15);
    }

    .imagen-wrapper img {
        width: 100%;
        height: auto;
        display: block;
        transition: transform 0.5s ease;
    }

    .imagen-wrapper:hover img {
        transform: scale(1.05);
    }

    .imagen-overlay {
        position: absolute;
        inset: 0;
        background: linear-gradient(135deg, rgba(1, 51, 103, 0.9), rgba(0, 86, 179, 0.9));
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--white);
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .imagen-wrapper:hover .imagen-overlay {
        opacity: 1;
    }

    /* Right Column - Benefits */
    .publicacion-beneficios {
        opacity: 0;
        animation: fadeInRight 0.8s cubic-bezier(0.4, 0, 0.2, 1) 0.4s forwards;
    }

    .beneficios-header {
        margin-block-end: 1.5rem;
    }

    .beneficios-header h3 {
        font-size: clamp(1.3rem, 3vw, 1.6rem);
