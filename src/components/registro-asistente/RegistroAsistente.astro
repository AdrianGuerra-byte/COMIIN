    margin: 0;
}

  .form-notice i {
    color: #2291C6;
    flex-shrink: 0;
  }

  /* Info box mejorado */
  .form-section .info-box {
    margin-block-start: clamp(1.5rem, 3vw, 2rem);
    padding: clamp(1.25rem, 2.5vw, 1.5rem);
    background: rgba(34, 145, 198, 0.08);
    border-radius: 12px;
    border-inline-start: 4px solid #2291C6;
  }

  .info-box-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-block-end: 0.75rem;
  }

  .info-box-header i {
    color: #2291C6;
    font-size: 1.25rem;
  }

  .info-box-header h3 {
    color: #1F407F;
    font-size: clamp(1rem, 2.2vw, 1.1rem);
    font-weight: 600;
    margin: 0;
  }

  .form-section .info-box p {
    color: var(--text-color);
    line-height: 1.6;
    margin: 0;
    font-size: clamp(0.9rem, 1.8vw, 0.95rem);
    text-align: left;
  }

  .form-section .info-box strong {
    color: #1F407F;
  }/* ===== ANIMACIONES ===== */
@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(30px) scale(0.98);
    }
    to {
        opacity: 1;
        transform: translateY(0) scale(1);
    }
}

.info-section,
.beneficios-section,
.opciones-section,
.form-section {
    animation: fadeInUp 0.6s cubic-bezier(0.4, 0, 0.2, 1) backwards;
}

.info-section {
    animation-delay: 0.1s;
}

.beneficios-section {
    animation-delay: 0.2s;
}

.opciones-section {
    animation-delay: 0.3s;
}

.form-section {
    animation-delay: 0.4s;
}

/* ===== RESPONSIVE DESIGN ===== */
@media (max-width: 1024px) {
    .registro-content {
        grid-template-columns: 1fr;
        gap: clamp(1.5rem, 3vw, 2rem);
    }

    .form-section {
        position: static;
        order: -1;
    }
}

@media (max-width: 768px) {
    .registro-section {
        padding: clamp(3rem, 6vw, 4rem) 1.5rem;
    }

    .beneficios-grid {
        grid-template-columns: repeat(2, 1fr);
    }

    .opciones-grid {
        grid-template-columns: 1fr;
    }

    .detail-item {
        flex-direction: column;
        text-align: center;
        align-items: center;
    }
}

@media (max-width: 480px) {
    .beneficios-grid {
        grid-template-columns: 1fr;
    }

    .date-row {
        grid-template-columns: 1fr;
        gap: 0.25rem;
    }

    .date-row dt {
        font-weight: 700;
    }
}

/* ===== ACCESIBILIDAD ===== */
@media (prefers-reduced-motion: reduce) {
    *,
    *::before,
    *::after {
        animation-duration: 0.01ms !important;
        animation-iteration-count: 1 !important;
        transition-duration: 0.01ms !important;
    }
}

  /* Focus visible para accesibilidad */
  .btn-primary:focus-visible {
    outline: 3px solid #2291C6;
    outline-offset: 3px;
  }
