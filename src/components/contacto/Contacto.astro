---
// Componente de Contacto con diseño coherente
---

<section class="contact-info-section">
    <div class="contact-container">
        <header class="section-header">
            <h1>Información de Contacto</h1>
            <p class="intro-text">Estamos aquí para ayudarte. Contáctanos a través de cualquiera de estos medios.</p>
        </header>
        
        <div class="contact-grid">
            <article class="contact-card">
                <div class="contact-icon">
                    <i class="fas fa-phone-alt"></i>
                </div>
                <h3>Teléfono</h3>
                <p class="highlight">771 139 2240</p>
                <p>Lunes a Viernes</p>
                <p>8:00 AM - 6:00 PM</p>
            </article>

            <article class="contact-card">
                <div class="contact-icon">
                    <i class="fas fa-envelope"></i>
                </div>
                <h3>Correo Electrónico</h3>
                <p class="highlight">coordinacion.planeacion@cuh.mx</p>
                <p>Para información del congreso</p>
            </article>

            <article class="contact-card">
                <div class="contact-icon">
                    <i class="fas fa-map-marker-alt"></i>
                </div>
                <h3>Dirección</h3>
                <p><strong>Centro Universitario Hidalguense</strong></p>
                <p>Blvd. del Minero 305</p>
                <p>Javier Rojo Gómez</p>
                <p>42030 Pachuca de Soto, Hgo.</p>
            </article>

            <article class="contact-card">
                <div class="contact-icon">
                    <i class="fas fa-clock"></i>
                </div>
                <h3>Horarios de Atención</h3>
                <div class="contact-hours">
                    <p><strong>Lunes a Viernes</strong></p>
                    <p>8:00 AM - 6:00 PM</p>
                    <p><strong>Sábados</strong></p>
                    <p>9:00 AM - 2:00 PM</p>
                </div>
            </article>
        </div>
    </div>
</section>

<style>
/* ==== SECCIÓN INFORMACIÓN DE CONTACTO ==== */
.contact-info-section {
    padding: clamp(3.5rem, 8vw, 5rem) clamp(1rem, 4vw, 2rem) clamp(2rem, 4vw, 3rem);
    background: linear-gradient(180deg, #f8f9fa 0%, #e9ecef 100%);
}

.contact-container {
    max-width: 1200px;
    margin: 0 auto;
}

.section-header {
    text-align: center;
    margin-block-end: clamp(2.5rem, 5vw, 3.5rem);
}

.section-header h1 {
    font-size: clamp(1.85rem, 5vw, 2.5rem);
    font-weight: 700;
    color: #1F407F;
    margin-block-end: 1.5rem;
    position: relative;
    display: inline-block;
    padding-block-end: 0.85rem;
}

.section-header h1::after {
    content: "";
    position: absolute;
    inset-block-end: 0;
    inset-inline-start: 50%;
    transform: translateX(-50%);
    width: 100px;
    height: 4px;
    background: linear-gradient(90deg, #1F407F, #2291C6);
    border-radius: 2px;
}

.intro-text {
    max-width: 700px;
    margin: 0 auto;
    color: var(--text-light);
    font-size: clamp(0.95rem, 2vw, 1.05rem);
    line-height: 1.7;
}

.contact-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: clamp(1.5rem, 3vw, 2rem);
}

.contact-card {
    background-color: var(--white);
    border-radius: 16px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    padding: clamp(2rem, 4vw, 2.5rem) clamp(1.5rem, 3vw, 2rem);
    text-align: center;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
    border-top: 4px solid #1F407F;
    animation: fadeInUp 0.6s cubic-bezier(0.4, 0, 0.2, 1) backwards;
}

.contact-card:nth-child(1) { animation-delay: 0.1s; }
.contact-card:nth-child(2) { animation-delay: 0.2s; }
.contact-card:nth-child(3) { animation-delay: 0.3s; }
.contact-card:nth-child(4) { animation-delay: 0.4s; }

.contact-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 35px rgba(0, 0, 0, 0.15);
    border-top-color: #2291C6;
}

.contact-icon {
    width: 80px;
    height: 80px;
    background: linear-gradient(135deg, #1F407F, #2291C6);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto clamp(1.25rem, 2.5vw, 1.5rem);
    color: var(--white);
    font-size: 1.8rem;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 6px 20px rgba(31, 64, 127, 0.3);
}

.contact-card:hover .contact-icon {
    transform: scale(1.1) rotate(5deg);
    box-shadow: 0 8px 25px rgba(31, 64, 127, 0.45);
}

.contact-card h3 {
    font-size: clamp(1.15rem, 2.5vw, 1.4rem);
    margin-block-end: clamp(1rem, 2vw, 1.25rem);
    color: #1F407F;
    font-weight: 600;
}

.contact-card p {
    margin-block-end: 0.75rem;
    color: var(--text-color);
    line-height: 1.6;
    font-size: clamp(0.9rem, 1.8vw, 0.95rem);
}

.contact-card p:last-child {
    margin-block-end: 0;
}

.contact-card .highlight {
    color: #2291C6;
    font-weight: 600;
    font-size: clamp(1.1rem, 2.2vw, 1.2rem);
    margin: clamp(0.75rem, 1.5vw, 1rem) 0;
    display: block;
}

.contact-card strong {
    color: #1F407F;
    font-weight: 600;
}

.contact-hours {
    background: linear-gradient(135deg, rgba(31, 64, 127, 0.04), rgba(34, 145, 198, 0.06));
    padding: clamp(1rem, 2vw, 1.25rem);
    border-radius: 12px;
    margin-top: clamp(0.75rem, 1.5vw, 1rem);
    border: 1px solid rgba(31, 64, 127, 0.1);
}

.contact-hours p {
    margin-block-end: 0.5rem;
}

.contact-hours p:last-child {
    margin-block-end: 0;
}

/* ==== ANIMACIONES ==== */
@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(30px) scale(0.98);
    }
    to {
        opacity: 1;
        transform: translateY(0) scale(1);
    }
}

/* ==== RESPONSIVE DESIGN ==== */
@media (max-width: 1024px) {
    .contact-grid {
        grid-template-columns: repeat(2, 1fr);
    }
}

@media (max-width: 768px) {
    .contact-info-section {
        padding: clamp(3rem, 6vw, 4rem) 1.5rem clamp(1.5rem, 3vw, 2rem);
    }
    
    .contact-grid {
        grid-template-columns: 1fr;
        max-width: 500px;
        margin: 0 auto;
    }
    
    .contact-card {
        padding: clamp(1.75rem, 3vw, 2rem) clamp(1.25rem, 2.5vw, 1.5rem);
    }
    
    .contact-icon {
        width: 70px;
        height: 70px;
        font-size: 1.6rem;
    }
}

@media (max-width: 480px) {
    .section-header h1 {
        font-size: clamp(1.5rem, 4vw, 1.85rem);
    }
    
    .contact-card {
        padding: 1.5rem 1.25rem;
    }
    
    .contact-icon {
        width: 65px;
        height: 65px;
        font-size: 1.5rem;
        margin-bottom: 1rem;
    }
    
    .contact-hours {
        padding: 0.875rem;
    }
}

/* ==== ACCESIBILIDAD ==== */
@media (prefers-reduced-motion: reduce) {
    *,
    *::before,
    *::after {
        animation-duration: 0.01ms !important;
        animation-iteration-count: 1 !important;
        transition-duration: 0.01ms !important;
    }
}

.contact-card:focus-within {
    outline: 3px solid #2291C6;
    outline-offset: 3px;
}

/* ==== IMPRESIÓN ==== */
@media print {
    .contact-info-section {
        background: white !important;
        padding: 0;
    }
    
    .contact-card {
        box-shadow: none;
        border: 1px solid #ddd;
        page-break-inside: avoid;
    }
    
    .contact-icon {
        print-color-adjust: exact;
        -webkit-print-color-adjust: exact;
    }
}
</style>