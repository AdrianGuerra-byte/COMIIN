<section class="programa-section" id="programa">
  <div class="programa-container">
    {showHeader && (
      <header class="programa-header">
        <h2>Programa Académico</h2>
        <p>
          {variant === 'compacto' 
            ? 'Conoce los eventos más destacados del congreso' 
            : 'Descubre todas las actividades, conferencias y talleres planeados para esta experiencia académica'}
        </p>
      </header>
    )}

    <nav class="programa-tabs" role="tablist" aria-label="Días del programa">
      {
        daysToShow.map((day, index) => (
          <button
            class:list={["tab-button", { active: index === 0 }]}
            role="tab"
            aria-selected={index === 0}
            aria-controls={`panel-${day.id}`}
            data-day={day.id}
          >
            <span class="tab-day">{day.label}</span>
            <span class="tab-date">{day.date}</span>
          </button>
        ))
      }
    </nav>

    <div class="programa-content">
      {
        daysToShow.map((day, index) => (
          <article
            class:list={["day-panel", { active: index === 0 }]}
            id={`panel-${day.id}`}
            role="tabpanel"
            aria-labelledby={day.id}
          >
            <div class="schedule-timeline">
              {day.events.map((event) => (
                <div class="schedule-item" data-datetime={event.datetime} data-duration={event.duration}>
                  <div class="event-time">
                    <time datetime={`${event.time}:00`}>
                      <span class="time-number">{event.time}</span>
                      <span class="time-period">{event.period}</span>
                    </time>
                  </div>
                  <div class="event-card">
                    <div class="event-header">
                      <h3 class="event-title">{event.title}</h3>
                    </div>
                    <p class="event-speaker">
                      <i class="fas fa-user" aria-hidden="true"></i>
                      {event.speaker}
                    </p>
                    <p class="event-location">
                      <i class="fas fa-map-marker-alt" aria-hidden="true"></i>
                      {event.location}
                    </p>
                    <span class="live-badge">
                      <span class="live-dot"></span>
                      EN CURSO
                    </span>
                  </div>
                </div>
              ))}
            </div>
          </article>
        ))
      }
    </div>

    {variant === 'compacto' && (
      <div class="programa-cta">
        <a href="/programa" class="btn-ver-completo">
          <span>Ver Programa Completo</span>
          <i class="fas fa-arrow-right" aria-hidden="true"></i>
        </a>
      </div>
    )}
  </div>
</section>

<script>
  function initProgramaTabs() {
    const tabButtons = document.querySelectorAll(".tab-button");
    const panels = document.querySelectorAll(".day-panel");

    if (!tabButtons.length || !panels.length) return;

    const switchTab = (selectedButton: Element) => {
      const targetDay = selectedButton.getAttribute("data-day");
      if (!targetDay) return;

      // Actualizar botones
      tabButtons.forEach((btn) => {
        const isSelected = btn === selectedButton;
        btn.classList.toggle("active", isSelected);
        btn.setAttribute("aria-selected", String(isSelected));
      });

      // Fade out panel actual
      const currentPanel = document.querySelector('.day-panel.active');
      if (currentPanel) {
        currentPanel.classList.add('fade-out');
      }

      // Después de la animación de fade out, cambiar el panel
      setTimeout(() => {
        panels.forEach((panel) => {
          const panelId = panel.getAttribute("id");
          const isActive = panelId === `panel-${targetDay}`;
          
          panel.classList.remove('fade-out');
          panel.classList.toggle("active", isActive);
          
          // Si es el panel activo, animar los items
          if (isActive) {
            const scheduleItems = panel.querySelectorAll('.schedule-item');
            scheduleItems.forEach((item, index) => {
              (item as HTMLElement).style.animationDelay = `${index * 0.1}s`;
            });
          }
        });
      }, 300);
    };

    // Event listeners
    tabButtons.forEach((button) => {
      button.addEventListener("click", () => switchTab(button));
    });

    // Soporte de teclado
    tabButtons.forEach((button, index) => {
      button.addEventListener("keydown", (e: Event) => {
        const keyEvent = e as KeyboardEvent;

        if (keyEvent.key === "ArrowRight") {
          e.preventDefault();
          const nextIndex = (index + 1) % tabButtons.length;
          (tabButtons[nextIndex] as HTMLElement).focus();
          switchTab(tabButtons[nextIndex]);
        }
        if (keyEvent.key === "ArrowLeft") {
          e.preventDefault();
          const prevIndex = (index - 1 + tabButtons.length) % tabButtons.length;
          (tabButtons[prevIndex] as HTMLElement).focus();
          switchTab(tabButtons[prevIndex]);
        }
      });
    });
  }

  // Función para detectar eventos en vivo
  function checkLiveEvents() {
    const scheduleItems = document.querySelectorAll('.schedule-item');
    const now = new Date();

    scheduleItems.forEach((item) => {
      const datetimeStr = item.getAttribute('data-datetime');
      const durationStr = item.getAttribute('data-duration');
      
      if (!datetimeStr || !durationStr) return;

      const eventStart = new Date(datetimeStr);
      const duration = parseInt(durationStr, 10);
      const eventEnd = new Date(eventStart.getTime() + duration * 60000); // Convertir minutos a milisegundos

      // Verificar si el evento está en curso
      const isLive = now >= eventStart && now <= eventEnd;

      if (isLive) {
        item.classList.add('is-live');
        console.log('Evento en vivo detectado:', item.querySelector('.event-title')?.textContent);
      } else {
        item.classList.remove('is-live');
      }
    });
  }

  // Inicializar en carga y navegaciones
  document.addEventListener("DOMContentLoaded", () => {
    initProgramaTabs();
    checkLiveEvents();
    // Actualizar cada minuto
    setInterval(checkLiveEvents, 60000);
  });
  
  document.addEventListener("astro:page-load", () => {
    initProgramaTabs();
    checkLiveEvents();
    // Actualizar cada minuto
    setInterval(checkLiveEvents, 60000);
  });
</script>

