---
// Reseñas de Participantes COMIIN

interface Review {
  name: string;
  role: string;
  avatar: string;
  text: string;
  rating: number;
}

const reviews: Review[] = [
  {
    name: "María González",
    role: "Estudiante de Ingeniería",
    avatar: "https://images.unsplash.com/photo-1494790108755-2616b612b786?ixlib=rb-4.0.3&auto=format&fit=crop&w=500&q=80",
    text: "COMIIN fue una experiencia transformadora. Las conferencias magistrales ampliaron mi perspectiva y los talleres prácticos me dieron herramientas valiosas para mi investigación. Definitivamente asistiré a la próxima edición.",
    rating: 5
  },
  {
    name: "Carlos Rodríguez",
    role: "Investigador",
    avatar: "https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?ixlib=rb-4.0.3&auto=format&fit=crop&w=500&q=80",
    text: "La calidad de los trabajos presentados y la organización del evento fueron excepcionales. El ambiente multidisciplinario permitió intercambiar ideas con profesionales de diversas áreas, enriqueciendo mi trabajo actual.",
    rating: 4.5
  },
  {
    name: "Ana Martínez",
    role: "Docente Universitaria",
    avatar: "https://images.unsplash.com/photo-1438761681033-6461ffad8d80?ixlib=rb-4.0.3&auto=format&fit=crop&w=500&q=80",
    text: "Como docente, valoro especialmente los espacios de diálogo académico como COMIIN. Mis estudiantes regresaron motivados y con nuevas ideas para sus proyectos. Un evento imprescindible en el calendario académico.",
    rating: 5
  }
];

function renderStars(rating: number) {
  const fullStars = Math.floor(rating);
  const hasHalfStar = rating % 1 !== 0;
  const emptyStars = 5 - Math.ceil(rating);
  
  return {
    full: fullStars,
    half: hasHalfStar ? 1 : 0,
    empty: emptyStars
  };
}
---

<section class="reviews-section">
  <div class="container">
    <header class="section-header">
      <h2>Reseñas de Participantes</h2>
      <p>Lo que dicen quienes han vivido la experiencia COMIIN</p>
    </header>
    
    <div class="reviews-grid">
      {reviews.map((review) => {
        const stars = renderStars(review.rating);
        return (
          <article class="review-card">
            <header class="review-header">
              <div class="review-avatar">
                <img 
                  src={review.avatar} 
                  alt={`Foto de ${review.name}`}
                  loading="lazy"
                />
              </div>
              <div class="review-info">
                <h3>{review.name}</h3>
                <p>{review.role}</p>
              </div>
            </header>
            
            <blockquote class="review-text">
              {review.text}
            </blockquote>
            
            <footer class="review-rating" aria-label={`Calificación: ${review.rating} de 5 estrellas`}>
              {[...Array(stars.full)].map(() => (
                <i class="fas fa-star" aria-hidden="true"></i>
              ))}
              {stars.half > 0 && <i class="fas fa-star-half-alt" aria-hidden="true"></i>}
              {[...Array(stars.empty)].map(() => (
                <i class="far fa-star" aria-hidden="true"></i>
              ))}
            </footer>
          </article>
        );
      })}
    </div>
  </div>
</section>

<style>
  .reviews-section {
    padding: 5rem 2rem;
    background: linear-gradient(180deg, #e9ecef 0%, #dee2e6 100%);
  }

  .container {
    max-width: 1200px;
    margin-inline: auto;
  }

  /* Header de la sección */
  .section-header {
    text-align: center;
    margin-block-end: 3rem;
  }

  .section-header h2 {
    font-size: clamp(2rem, 5vw, 2.5rem);
    font-weight: 700;
    color: var(--primary-color);
    position: relative;
    display: inline-block;
    padding-block-end: 1rem;
  }

  .section-header h2::after {
    content: '';
    position: absolute;
    inset-block-end: 0;
    inset-inline-start: 50%;
    transform: translateX(-50%);
    width: 80px;
    height: 4px;
    background: linear-gradient(90deg, var(--primary-color), var(--secondary-color));
    border-radius: 2px;
  }

  .section-header p {
    font-size: 1.05rem;
    color: var(--text-light);
    margin-block-start: 1rem;
  }

  /* Grid de reseñas */
  .reviews-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2rem;
  }

  /* Tarjeta de reseña */
  .review-card {
    background: var(--white);
    border-radius: 12px;
    padding: 2rem;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    border: 1px solid rgba(1, 51, 103, 0.08);
    position: relative;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  .review-card::before {
    content: '';
    position: absolute;
    inset-block-start: 0;
    inset-inline-start: 0;
    inset-inline-end: 0;
    height: 4px;
    background: linear-gradient(90deg, var(--primary-color), var(--secondary-color));
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .review-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.15);
  }

  .review-card:hover::before {
    transform: scaleX(1);
  }

  /* Header de la reseña */
  .review-header {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .review-avatar {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    overflow: hidden;
    border: 3px solid var(--primary-color);
    flex-shrink: 0;
    box-shadow: 0 4px 12px rgba(1, 51, 103, 0.2);
  }

  .review-avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .review-info {
    flex: 1;
    min-width: 0;
  }

  .review-info h3 {
    font-size: 1.15rem;
    font-weight: 600;
    color: var(--primary-color);
    margin-block-end: 0.25rem;
    line-height: 1.3;
  }

  .review-info p {
    font-size: 0.9rem;
    color: var(--text-light);
    line-height: 1.4;
  }

  /* Texto de la reseña */
  .review-text {
    font-size: clamp(0.95rem, 2vw, 1rem);
    line-height: 1.7;
    color: var(--text-color);
    font-style: italic;
    text-wrap: pretty;
    margin: 0;
    padding-inline-start: 1rem;
    border-inline-start: 3px solid rgba(1, 51, 103, 0.15);
    flex: 1;
  }

  .review-text::before {
    content: '"';
    color: var(--primary-color);
    font-size: 2rem;
    line-height: 0;
    margin-inline-end: 0.25rem;
    opacity: 0.3;
  }

  .review-text::after {
    content: '"';
    color: var(--primary-color);
    font-size: 2rem;
    line-height: 0;
    margin-inline-start: 0.25rem;
    opacity: 0.3;
  }

  /* Rating de estrellas */
  .review-rating {
    display: flex;
    gap: 0.25rem;
    font-size: 1.1rem;
    color: #ffc107;
  }

  .review-rating i {
    transition: transform 0.2s ease;
  }

  .review-card:hover .review-rating i {
    transform: scale(1.1);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .reviews-section {
      padding: 4rem 1.5rem;
    }

    .section-header {
      margin-block-end: 2.5rem;
    }

    .reviews-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .review-card {
      padding: 1.75rem;
    }
  }

  @media (max-width: 480px) {
    .reviews-section {
      padding: 3rem 1rem;
    }

    .section-header h2::after {
      width: 60px;
      height: 3px;
    }

    .review-card {
      padding: 1.5rem;
      gap: 1rem;
    }

    .review-avatar {
      width: 50px;
      height: 50px;
      border-width: 2px;
    }

    .review-info h3 {
      font-size: 1.05rem;
    }

    .review-info p {
      font-size: 0.85rem;
    }

    .review-text {
      padding-inline-start: 0.75rem;
    }

    .review-rating {
      font-size: 1rem;
    }
  }
</style>