<style>
/* ===================================
   BASE Y LAYOUT DE SECCIÓN
   =================================== */
.areas-section {
  padding: clamp(2rem, 8vw, 5rem) clamp(1rem, 4vw, 2rem);
  background: var(--white);
}

.container {
  max-width: 1200px;
  margin-inline: auto;
}

.section-header {
  text-align: center;
  margin-bottom: clamp(2.5rem, 6vw, 4rem);
  animation: fadeInDown 0.5s ease-out;
}

.section-header h2 {
  font-size: clamp(2rem, 5vw, 2.8rem);
  font-weight: 800;
  color: var(--primary-color);
  margin-bottom: 0.75rem;
}

.section-subtitle {
  color: var(--text-light);
  font-size: clamp(1rem, 2.5vw, 1.15rem);
  max-width: 750px;
  margin: 0 auto;
  line-height: 1.7;
}

/* ===================================
   GRID DE ÁREAS
   =================================== */
.areas-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: clamp(1.5rem, 4vw, 2.5rem);
}

/* ===================================
   CARD DE ÁREA
   =================================== */
.area-card {
    background: var(--white);
    border-radius: 16px;
    box-shadow: 0 4px 15px rgba(0, 30, 80, 0.05);
    border: 1px solid #e0e8f3;
    padding: 1.5rem;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    display: flex;
    flex-direction: column;
    height: 100%;
    animation: fadeInUp 0.5s ease-out backwards;
}

.area-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 10px 30px rgba(0, 30, 80, 0.1);
}

.icon-wrapper {
  width: 60px;
  height: 60px;
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
  color: var(--white);
  font-size: 1.75rem;
  margin-bottom: 1rem;
  box-shadow: 0 5px 15px rgba(0, 50, 120, 0.2);
}

.area-card h3 {
  font-size: 1.3rem;
  font-weight: 700;
  color: var(--primary-color);
  margin: 0 0 1rem 0;
}

.area-card ul {
  list-style: none;
  padding: 0;
  margin: 0;
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
  flex-grow: 1;
}

.area-card li {
  display: flex;
  align-items: flex-start;
  gap: 0.75rem;
  font-size: 0.95rem;
  line-height: 1.6;
  color: var(--text-light);
}

.area-card li i {
  color: var(--primary-color);
  margin-top: 0.3rem;
  font-size: 0.75rem;
}

/* Staggered animation delays */
.areas-grid .area-card:nth-child(1) { animation-delay: 0.1s; }
.areas-grid .area-card:nth-child(2) { animation-delay: 0.15s; }
.areas-grid .area-card:nth-child(3) { animation-delay: 0.2s; }
.areas-grid .area-card:nth-child(4) { animation-delay: 0.25s; }
.areas-grid .area-card:nth-child(5) { animation-delay: 0.3s; }
.areas-grid .area-card:nth-child(6) { animation-delay: 0.35s; }

/* ===================================
   ANIMACIONES Y RESPONSIVE
   =================================== */
@keyframes fadeInDown {
    from { opacity: 0; transform: translateY(-20px); }
    to { opacity: 1; transform: translateY(0); }
}

@keyframes fadeInUp {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
}

@media (prefers-reduced-motion: reduce) {
    *, *::before, *::after {
        animation-duration: 0.01ms !important;
        transition-duration: 0.01ms !important;
    }
}
</style>