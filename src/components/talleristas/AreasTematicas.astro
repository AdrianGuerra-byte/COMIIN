<style>
  /* Áreas Temáticas Section */
  .areas-section {
    padding: 4rem 2rem 3.5rem;
    background: linear-gradient(180deg, #e9ecef 0%, #dee2e6 100%);
  }

  .container {
    max-width: 1200px;
    margin-inline: auto;
  }

  /* Section Header */
  .section-header {
    text-align: center;
    margin-block-end: 3rem;
  }

  .section-header h2 {
    font-size: clamp(1.85rem, 5vw, 2.5rem);
    color: #1F407F;
    line-height: 1.2;
    margin-block-end: 0.75rem;
    font-weight: 700;
    position: relative;
    padding-block-end: 0.85rem;
    display: inline-block;
  }

  .section-header h2::after {
    content: '';
    position: absolute;
    inset-block-end: 0;
    inset-inline-start: 50%;
    transform: translateX(-50%);
    width: 80px;
    height: 4px;
    background: #1F407F;
    border-radius: 2px;
  }

  .section-subtitle {
    color: var(--text-light);
    font-size: clamp(0.95rem, 2.2vw, 1.05rem);
    max-width: 700px;
    margin-inline: auto;
    line-height: 1.5;
    text-wrap: pretty;
  }

  /* Áreas Grid */
  .areas-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2rem;
  }

  /* Area Card */
  .area-card {
    background: var(--white);
    border-radius: 12px;
    padding: 2.25rem 2rem;
    box-shadow: 0 3px 10px rgba(0, 0, 0, 0.06);
    border-top: 4px solid #1F407F;
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1),
                box-shadow 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
    height: 100%;
    animation: fadeInUp 0.6s cubic-bezier(0.4, 0, 0.2, 1) backwards;
  }

  .area-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.12);
  }

  /* Colores por categoría - Áreas Temáticas */
  /* Card 1: Sistemas y Tecnología - Ciencias Exactas */
  .areas-grid .area-card:nth-child(1) {
    border-top-color: #26408F;
  }

  .areas-grid .area-card:nth-child(1) .icon-wrapper {
    background: linear-gradient(135deg, #26408F 0%, #1F367A 100%);
    box-shadow: 0 4px 12px rgba(38, 64, 143, 0.25);
  }

  .areas-grid .area-card:nth-child(1) h3,
  .areas-grid .area-card:nth-child(1) li i {
    color: #26408F;
  }

  /* Card 2: Psicología y Neurociencias - Ciencias de la Salud */
  .areas-grid .area-card:nth-child(2) {
    border-top-color: #2291C6;
  }

  .areas-grid .area-card:nth-child(2) .icon-wrapper {
    background: linear-gradient(135deg, #2291C6 0%, #1C7AB6 100%);
    box-shadow: 0 4px 12px rgba(34, 145, 198, 0.25);
  }

  .areas-grid .area-card:nth-child(2) h3,
  .areas-grid .area-card:nth-child(2) li i {
    color: #2291C6;
  }

  /* Card 3: Derecho y Justicia Social - Ciencias Sociales */
  .areas-grid .area-card:nth-child(3) {
    border-top-color: #FA7C2C;
  }

  .areas-grid .area-card:nth-child(3) .icon-wrapper {
    background: linear-gradient(135deg, #FA7C2C 0%, #F45429 100%);
    box-shadow: 0 4px 12px rgba(250, 124, 44, 0.25);
  }

  .areas-grid .area-card:nth-child(3) h3,
  .areas-grid .area-card:nth-child(3) li i {
    color: #FA7C2C;
  }

  /* Card 4: Administración y Negocios - Económico Administrativas */
  .areas-grid .area-card:nth-child(4) {
    border-top-color: #EC4464;
  }

  .areas-grid .area-card:nth-child(4) .icon-wrapper {
    background: linear-gradient(135deg, #EC4464 0%, #C1398F 100%);
    box-shadow: 0 4px 12px rgba(236, 68, 100, 0.25);
  }

  .areas-grid .area-card:nth-child(4) h3,
  .areas-grid .area-card:nth-child(4) li i {
    color: #EC4464;
  }

  /* Card 5: Educación y Pedagogía - Ciencias Sociales */
  .areas-grid .area-card:nth-child(5) {
    border-top-color: #FCA434;
  }

  .areas-grid .area-card:nth-child(5) .icon-wrapper {
    background: linear-gradient(135deg, #FCA434 0%, #FA7C2C 100%);
    box-shadow: 0 4px 12px rgba(252, 164, 52, 0.25);
  }

  .areas-grid .area-card:nth-child(5) h3,
  .areas-grid .area-card:nth-child(5) li i {
    color: #FCA434;
  }

  /* Card 6: Ciencias Sociales - Ciencias Sociales */
  .areas-grid .area-card:nth-child(6) {
    border-top-color: #F45429;
  }

  .areas-grid .area-card:nth-child(6) .icon-wrapper {
    background: linear-gradient(135deg, #F45429 0%, #FA7C2C 100%);
    box-shadow: 0 4px 12px rgba(244, 84, 41, 0.25);
  }

  .areas-grid .area-card:nth-child(6) h3,
  .areas-grid .area-card:nth-child(6) li i {
    color: #F45429;
  }

  /* Icon Wrapper */
  .icon-wrapper {
    width: 80px;
    height: 80px;
    margin-inline: auto;
    background: #1F407F;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 4px 12px rgba(31, 64, 127, 0.25);
  }

  .area-card:hover .icon-wrapper {
    transform: scale(1.1) rotate(5deg);
  }

  .icon-wrapper i {
    font-size: 2rem;
    color: var(--white);
  }

  /* Card Title */
  .area-card h3 {
    color: #1F407F;
    font-size: clamp(1.15rem, 2.5vw, 1.3rem);
    font-weight: 700;
    margin: 0;
    text-align: center;
    text-wrap: pretty;
  }

  /* Lista de temas */
  .area-card ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.85rem;
  }

  .area-card li {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
    color: var(--text-color);
    font-size: clamp(0.88rem, 2vw, 0.95rem);
    line-height: 1.6;
    text-align: left;
    transition: transform 0.2s ease, color 0.2s ease;
  }

  .area-card li:hover {
    transform: translateX(4px);
  }

  .area-card li i {
    color: #1F407F;
    font-size: 0.75rem;
    margin-block-start: 0.3rem;
    flex-shrink: 0;
    transition: transform 0.2s ease;
  }

  .area-card li:hover i {
    transform: translateX(2px);
  }

  .area-card li span {
    flex: 1;
    text-wrap: pretty;
  }

  /* Staggered Animation */
  .area-card:nth-child(1) { animation-delay: 0.1s; }
  .area-card:nth-child(2) { animation-delay: 0.15s; }
  .area-card:nth-child(3) { animation-delay: 0.2s; }
  .area-card:nth-child(4) { animation-delay: 0.25s; }
  .area-card:nth-child(5) { animation-delay: 0.3s; }
  .area-card:nth-child(6) { animation-delay: 0.35s; }

  /* Animations */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Responsive */
  @media (max-width: 1200px) {
    .areas-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (max-width: 992px) {
    .areas-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1.75rem;
    }
  }

  @media (max-width: 768px) {
    .areas-section {
      padding: 3.5rem 1.5rem 3rem;
    }

    .section-header {
      margin-block-end: 2.5rem;
    }

    .areas-grid {
      gap: 1.5rem;
    }

    .area-card {
      padding: 2rem 1.75rem;
    }

    .icon-wrapper {
      width: 70px;
      height: 70px;
    }

    .icon-wrapper i {
      font-size: 1.75rem;
    }

    .area-card li {
      font-size: 0.88rem;
    }
  }

  @media (max-width: 480px) {
    .areas-section {
      padding: 3rem 1rem 2.5rem;
    }

    .areas-grid {
      grid-template-columns: 1fr;
      gap: 1.25rem;
    }

    .area-card {
      padding: 1.75rem 1.5rem;
    }

    .icon-wrapper {
      width: 65px;
      height: 65px;
    }

    .icon-wrapper i {
      font-size: 1.6rem;
    }

    .area-card li {
      gap: 0.65rem;
    }
  }
</style>