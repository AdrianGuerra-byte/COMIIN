---
// Correo codificado en Base64 para protección contra scrapers
const correoBase64 = 'Y29uZ3Jlc29jdWhAcG9zZ3JhZG9jdWguZWR1Lm14';
---
<section class="convocatoria-section">
  <div class="container">
    <header class="section-header">
      <h2>Convocatoria para Impartir Talleres</h2>
      <p class="section-subtitle">
        Comparte tu experiencia y conocimientos con la comunidad académica
      </p>
    </header>

    <div class="convocatoria-content">
      <div class="intro-text">
        <p>
          Si eres experto en alguna de las <strong>áreas disciplinares del congreso</strong>, 
          ¡te invitamos a enviar tu propuesta para impartir un taller! Los talleres deben ser 
          <strong>presenciales</strong> y representar una oportunidad de formación práctica 
          para los participantes.
        </p>
      </div>

      <div class="main-grid">
        <article class="requisitos-card">
          <header class="card-header">
            <i class="fas fa-clipboard-check" aria-hidden="true"></i>
            <h3>Requisitos de la Propuesta</h3>
          </header>
          <ul class="requisitos-lista" role="list">
            <li>
              <i class="fas fa-check-circle" aria-hidden="true"></i>
              <span>Propuesta temática clara y relevante</span>
            </li>
            <li>
              <i class="fas fa-check-circle" aria-hidden="true"></i>
              <span>Perfil del instructor (CV resumido)</span>
            </li>
            <li>
              <i class="fas fa-check-circle" aria-hidden="true"></i>
              <span>Objetivos del taller y metodología</span>
            </li>
            <li>
              <i class="fas fa-check-circle" aria-hidden="true"></i>
              <span>Perfil de los participantes (¿a quién va dirigido?)</span>
            </li>
            <li>
              <i class="fas fa-check-circle" aria-hidden="true"></i>
              <span>Duración (máximo 1 hora y 30 minutos)</span>
            </li>
            <li>
              <i class="fas fa-check-circle" aria-hidden="true"></i>
              <span>Logística requerida (equipos, materiales, etc.)</span>
            </li>
          </ul>
        </article>

        <div class="action-column">
          <div class="deadline-box">
            <i class="far fa-calendar-alt" aria-hidden="true"></i>
            <div class="deadline-content">
              <strong>Fecha límite</strong>
              <time datetime="2025-12-31" class="deadline-date">31 de diciembre de 2025</time>
            </div>
          </div>

          <div class="cta-container">
            <!-- Descargar Plantilla - Enlace directo a Drive -->
            <a 
              href="https://drive.google.com/drive/folders/1o8Fo9ns-Q3fjk2gzpaqeCqQq4Yc7tv4K"
              target="_blank"
              rel="noopener noreferrer"
              class="cta-button cta-primary"
              aria-label="Descargar plantillas desde Google Drive"
            >
              <i class="fas fa-download" aria-hidden="true"></i>
              <span>Descargar Plantillas</span>
              <i class="fas fa-external-link-alt" aria-hidden="true"></i>
            </a>

            <!-- Enviar Propuesta con información desplegable -->
            <div class="dropdown-wrapper">
              <button 
                class="cta-button cta-secondary dropdown-toggle"
                aria-label="Ver información para enviar propuesta"
                aria-expanded="false"
              >
                <i class="fas fa-paper-plane" aria-hidden="true"></i>
                <span>Enviar Propuesta</span>
                <i class="fas fa-chevron-down chevron-icon" aria-hidden="true"></i>
              </button>
              <div class="dropdown-menu info-menu">
                <div class="info-content">
                  <h4>
                    <i class="fas fa-envelope" aria-hidden="true"></i>
                    Instrucciones de Envío
                  </h4>
                  
                  <!-- Correo Seguro -->
                  <div class="info-item">
                    <strong>Correo electrónico:</strong>
                    <div class="email-wrapper">
                      <div id="correo-revelado" class="email-revealed">
                        <span id="texto-correo" class="email-text"></span>
                        <button id="btn-copiar-correo" type="button" class="btn-copy-email" title="Copiar al portapapeles">
                          <i class="fas fa-copy" aria-hidden="true"></i>
                        </button>
                      </div>
                    </div>
                  </div>

                  <div class="info-item">
                    <strong>Asunto:</strong>
                    <span class="subject-text">Propuesta Taller COMIIN 2026</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script define:vars={{ correoBase64 }}>
  // Funcionalidad del dropdown de envío
  document.addEventListener('DOMContentLoaded', () => {
    const dropdown = document.querySelector('.dropdown-wrapper');
    const spanCorreo = document.getElementById('texto-correo');
    const btnCopiar = document.getElementById('btn-copiar-correo');

    if (!dropdown) return;

    const toggle = dropdown.querySelector('.dropdown-toggle');
    const menu = dropdown.querySelector('.dropdown-menu');
    const chevron = toggle?.querySelector('.chevron-icon');

    // Función para decodificar Base64
    const decodificar = (str) => {
      try {
        return atob(str);
      } catch (e) {
        console.error('Error al decodificar el correo:', e);
        return 'correo-invalido';
      }
    };

    let emailDecodificado = '';
    let correoRevelado = false;

    // Función para revelar el correo
    const revelarCorreo = () => {
      if (correoRevelado) return;
      
      emailDecodificado = decodificar(correoBase64);
      
      // Mostrar correo como texto simple (sin mailto)
      if (spanCorreo) {
        spanCorreo.textContent = emailDecodificado;
      }

      correoRevelado = true;
    };
    
    // Toggle del dropdown
    if (toggle && menu) {
      toggle.addEventListener('click', (e) => {
        e.preventDefault();
        e.stopPropagation();
        
        const isOpen = menu.classList.toggle('show');
        toggle.setAttribute('aria-expanded', isOpen.toString());
        chevron?.classList.toggle('rotated');

        // Revelar el correo al abrir
        if (isOpen) {
          revelarCorreo();
        }
      });
    }
    
    // Cerrar dropdown al hacer click fuera
    document.addEventListener('click', (e) => {
      const target = e.target;
      if (target && target.closest && !target.closest('.dropdown-wrapper')) {
        menu?.classList.remove('show');
        toggle?.setAttribute('aria-expanded', 'false');
        chevron?.classList.remove('rotated');
      }
    });

    // Acción de Copiar con mensaje
    btnCopiar?.addEventListener('click', async () => {
      const email = emailDecodificado || spanCorreo?.textContent || '';
      try {
        await navigator.clipboard.writeText(email);
        
        // Cambiar el texto del botón
        const textoOriginal = btnCopiar.innerHTML;
        
        btnCopiar.innerHTML = '<i class="fas fa-check" aria-hidden="true"></i> <span class="copied-text">Copiado</span>';
        btnCopiar.classList.add('copied');
        
        setTimeout(() => {
          btnCopiar.innerHTML = textoOriginal;
          btnCopiar.classList.remove('copied');
        }, 2000);
      } catch (err) {
        console.error('Error al copiar:', err);
        alert('No se pudo copiar el correo. Por favor, cópialo manualmente.');
      }
    });
  });
</script>

<style>
