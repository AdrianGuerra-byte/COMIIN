  list-style: none;
  padding: 0;
  margin: 0;
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.requisitos-lista li {
  display: flex;
  align-items: flex-start;
  gap: 0.75rem;
  font-size: 0.95rem;
  line-height: 1.6;
}

.requisitos-lista i {
  color: var(--primary-color);
  margin-top: 0.25rem;
  font-size: 0.9rem;
}

/* Columna de acciones */
.action-column {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}

.deadline-box {
  background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
  color: var(--white);
  padding: 1.5rem;
  border-radius: 12px;
  text-align: center;
  box-shadow: 0 6px 16px rgba(1, 51, 103, 0.2);
}

.deadline-box i {
  font-size: 2rem;
  margin-bottom: 0.75rem;
}

.deadline-box strong {
  display: block;
  font-weight: 600;
  margin-bottom: 0.25rem;
}

.deadline-date {
  font-size: 1.3rem;
  font-weight: 700;
}

/* Botones y área de envío */
.cta-container {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
}

.cta-button {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.75rem;
  padding: 0.9rem 1rem;
  font-weight: 600;
  border-radius: 12px;
  border: 2px solid transparent;
  transition: all 0.3s ease;
  cursor: pointer;
  text-decoration: none;
}

.cta-primary {
  background: var(--primary-color);
  color: var(--white);
}

.cta-primary:hover {
  background: var(--secondary-color);
  transform: translateY(-3px);
  box-shadow: 0 4px 15px rgba(0, 50, 120, 0.2);
}

.submission-card {
  text-align: left;
}

.submission-card .info-item {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
  font-size: 0.95rem;
}

.info-item strong {
  font-weight: 600;
  color: var(--dark-color);
}

.email-revealed {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 0.75rem;
  background: #f4f7fc;
  padding: 0.75rem 1rem;
  border-radius: 8px;
}

.email-text {
  font-family: monospace;
  word-break: break-all;
  color: var(--text-light);
}

.subject-text {
  font-family: monospace;
  background: #f4f7fc;
  padding: 0.5rem 1rem;
  border-radius: 8px;
  display: inline-block;
  color: var(--text-light);
}

.btn-copy-email {
  background: transparent;
  border: 1px solid #cdd7e5;
  color: var(--text-light);
  padding: 0.4rem 0.8rem;
  border-radius: 8px;
  cursor: pointer;
  transition: all 0.2s ease;
}

.btn-copy-email:hover {
  background: #e9eef5;
  color: var(--primary-color);
}

.btn-copy-email.copied {
  background: #28a745;
  border-color: #28a745;
  color: var(--white);
}
</style>