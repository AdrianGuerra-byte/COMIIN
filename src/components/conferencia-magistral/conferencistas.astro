---
import ConferencistaCard from '../common/ConferencistaCard.astro';
import { conferencistas } from '../../data/conferencistas';
---

<!-- Sección Mensaje Conferencistas -->
<section class="mensaje-conferencistas">
  <div class="container">
    <header class="mensaje-header">
      <h2>Conoce a Nuestros Conferencistas Magistrales</h2>
      <p>
        En el <strong>COMIIN 2026</strong>, contamos con la participación de líderes,
        investigadores y especialistas de diversas áreas del conocimiento.  
        Ellos compartirán experiencias, proyectos y perspectivas que inspiran 
        y marcan el rumbo de la innovación multidisciplinaria.
      </p>
    </header>
  </div>
</section>

<!-- Sección Conferencistas -->
<section class="conferencistas-section">
  <div class="container">
    <header class="section-header">
      <h2>Conferencistas Magistrales</h2>
      <p class="section-subtitle">
        Conoce a las voces líderes que darán vida al COMIIN 2026, presentando conferencias magistrales y experiencias que inspiran.
      </p>
    </header>

    <div class="conferencistas-grid">
      {conferencistas.map((conferencista, index) => (
        <ConferencistaCard 
          nombre={conferencista.nombre}
          especialidad={conferencista.especialidad}
          descripcion={conferencista.descripcion}
          imagen={conferencista.imagen}
          linkedin={conferencista.linkedin}
          twitter={conferencista.twitter}
          website={conferencista.website}
          delay={index * 0.1}
        />
      ))}
    </div>
  </div>
</section>

<style>
  /* Sección Mensaje Conferencistas */
  .mensaje-conferencistas {
    padding: clamp(3.5rem, 8vw, 5rem) clamp(1rem, 4vw, 2rem);
    background: linear-gradient(180deg, var(--white) 0%, #f8f9fa 100%);
  }

  .container {
    max-width: 1200px;
    margin-inline: auto;
  }

  .mensaje-header {
    text-align: center;
    max-width: 900px;
    margin-inline: auto;
  }

  .mensaje-header h2 {
    font-size: clamp(1.85rem, 5vw, 2.5rem);
    color: var(--primary-color);
    line-height: 1.2;
    margin-block-end: 0.75rem;
    font-weight: 700;
    position: relative;
    padding-block-end: 0.85rem;
    display: inline-block;
  }

  .mensaje-header h2::after {
    content: '';
    position: absolute;
    inset-block-end: 0;
    inset-inline-start: 50%;
    transform: translateX(-50%);
    width: 80px;
    height: 4px;
    background: linear-gradient(90deg, var(--primary-color), var(--secondary-color));
    border-radius: 2px;
  }

  .mensaje-header p {
    font-size: clamp(0.9rem, 2vw, 0.98rem);
    color: var(--text-color);
    line-height: 1.7;
    text-wrap: pretty;
    hyphens: auto;
    margin-block-start: 1.25rem;
  }

  .mensaje-header strong {
    color: var(--primary-color);
    font-weight: 700;
  }

  /* Sección Conferencistas */
  .conferencistas-section {
    padding: clamp(3.5rem, 8vw, 5rem) clamp(1rem, 4vw, 2rem);
    background: linear-gradient(180deg, #f8f9fa 0%, #e9ecef 100%);
  }

  .section-header {
    text-align: center;
    margin-block-end: clamp(2.5rem, 6vw, 3.5rem);
  }

  .section-header h2 {
    font-size: clamp(1.85rem, 5vw, 2.5rem);
    color: var(--primary-color);
    line-height: 1.2;
    margin-block-end: 0.75rem;
    font-weight: 700;
    position: relative;
    padding-block-end: 0.85rem;
    display: inline-block;
  }

  .section-header h2::after {
    content: '';
    position: absolute;
    inset-block-end: 0;
    inset-inline-start: 50%;
    transform: translateX(-50%);
    width: 80px;
    height: 4px;
    background: linear-gradient(90deg, var(--primary-color), var(--secondary-color));
    border-radius: 2px;
  }

  .section-subtitle {
    color: var(--text-light);
    font-size: clamp(0.95rem, 2.2vw, 1.05rem);
    max-width: 700px;
    margin-inline: auto;
    line-height: 1.5;
    text-wrap: pretty;
  }

  /* Grid de Conferencistas */
  .conferencistas-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(min(340px, 100%), 1fr));
    gap: clamp(1.5rem, 4vw, 2rem);
  }

  /* Responsive */
  @media (max-width: 1200px) {
    .conferencistas-grid {
      grid-template-columns: repeat(auto-fit, minmax(min(340px, 100%), 1fr));
    }
  }

  @media (max-width: 992px) {
    .conferencistas-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .mensaje-conferencistas,
    .conferencistas-section {
      padding: 3.5rem 1.5rem;
    }

    .section-header {
      margin-block-end: 2.5rem;
    }

    .conferencistas-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1.5rem;
    }
  }

  @media (max-width: 480px) {
    .mensaje-conferencistas,
    .conferencistas-section {
      padding: 3rem 1rem;
    }

    .section-header {
      margin-block-end: 2rem;
    }

    .conferencistas-grid {
      grid-template-columns: 1fr;
      gap: 1.25rem;
    }
  }
</style>