---
import { Icon } from 'astro-icon/components';
---

<aside class="floating-icons" aria-label="Contacto rápido">
  <a 
    href="https://wa.me/7711392240" 
    class="floating-icon whatsapp" 
    target="_blank" 
    rel="noopener noreferrer" 
    aria-label="Contactar por WhatsApp"
  >
    <Icon name="fa6-brands:whatsapp" />
  </a>
  <a 
    href="https://www.facebook.com/CUH.oficial/?locale=es_LA" 
    class="floating-icon facebook" 
    target="_blank" 
    rel="noopener noreferrer" 
    aria-label="Facebook"
  >
    <Icon name="fa6-brands:facebook-f" />
  </a>
  <a 
    href="https://www.instagram.com/cuh_oficial/" 
    class="floating-icon instagram" 
    target="_blank" 
    rel="noopener noreferrer" 
    aria-label="Instagram"
  >
    <Icon name="fa6-brands:instagram" />
  </a>
  <a 
    href="https://www.tiktok.com/@cuhoficial?lang=es" 
    class="floating-icon tiktok" 
    target="_blank" 
    rel="noopener noreferrer" 
    aria-label="TikTok"
  >
    <Icon name="fa6-brands:tiktok" />
  </a>
</aside>

<style>
  .floating-icons {
    position: fixed;
    bottom: 20px; /* CAMBIO: de 30px */
    right: 20px;  /* CAMBIO: de 30px */
    display: flex;
    flex-direction: column;
    gap: 10px;    /* CAMBIO: de 15px */
    z-index: 998;
  }

  .floating-icon {
    width: 50px;   /* CAMBIO: de 56px */
    height: 50px;  /* CAMBIO: de 56px */
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    color: var(--white);
    font-size: 22px; /* CAMBIO: de 24px */
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
    position: relative;
    overflow: hidden;
  }

  .floating-icon::before {
    content: '';
    position: absolute;
    inset: 0;
    background: inherit;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .floating-icon:hover {
    transform: translateY(-5px) scale(1.1);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.4);
  }

  .floating-icon:hover::before {
    opacity: 0.8;
  }

  .floating-icon svg {
    position: relative;
    z-index: 1;
    width: 1em;
    height: 1em;
  }

  /* Colores específicos de redes sociales */
  .whatsapp { 
    background: linear-gradient(135deg, #25d366 0%, #1ebe57 100%);
  }

  .facebook { 
    background: linear-gradient(135deg, #1877f2 0%, #0c5ec7 100%);
  }

  .instagram { 
    background: radial-gradient(circle at 30% 107%, #fdf497 0%, #fd5949 45%, #d6249f 60%, #285AEB 90%);
  }

  .tiktok { 
    background: linear-gradient(135deg, #000000 0%, #333333 100%);
  }

  /* Animación de entrada para los iconos flotantes */
  @keyframes floatIn {
    from {
      opacity: 0;
      transform: translateX(100px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  .floating-icon {
    animation: floatIn 0.6s ease-out backwards;
  }

  .floating-icon:nth-child(1) { animation-delay: 0.1s; }
  .floating-icon:nth-child(2) { animation-delay: 0.2s; }
  .floating-icon:nth-child(3) { animation-delay: 0.3s; }
  .floating-icon:nth-child(4) { animation-delay: 0.4s; }

  /* Pulso suave en el icono de WhatsApp */
  @keyframes pulse {
    0%, 100% {
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
    }
    50% {
      box-shadow: 0 4px 25px rgba(37, 211, 102, 0.6);
    }
  }

  .whatsapp {
    animation: pulse 2s ease-in-out infinite, floatIn 0.6s ease-out backwards;
    animation-delay: 2s, 0.1s; /* Retrasa la animación de pulso */
  }

  @media (max-width: 768px) {
    /* Iconos flotantes en móvil */
    .floating-icons {
      bottom: 15px; /* CAMBIO: de 20px */
      right: 15px;  /* CAMBIO: de 20px */
      gap: 10px;    /* CAMBIO: de 12px */
    }

    .floating-icon {
      width: 48px;   /* CAMBIO: de 50px */
      height: 48px;  /* CAMBIO: de 50px */
      font-size: 20px; /* CAMBIO: de 22px */
    }
  }

  @media (max-width: 480px) {
    .floating-icons {
      bottom: 10px; /* CAMBIO: de 15px */
      right: 10px;  /* CAMBIO: de 15px */
      gap: 8px;     /* CAMBIO: de 10px */
    }

    .floating-icon {
      width: 44px;   /* CAMBIO: de 48px */
      height: 44px;  /* CAMBIO: de 48px */
      font-size: 18px; /* CAMBIO: de 20px */
    }
  }
</style>