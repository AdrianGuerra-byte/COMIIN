---
// Componente reutilizable para mostrar talleristas
export interface Props {
  nombre: string;
  especialidad: string;
  tituloTaller: string;
  descripcion: string;
  horario: string;
  imagen: string;
  email?: string;
  instagram?: string;
  delay?: number;
}

const { 
  nombre, 
  especialidad, 
  tituloTaller,
  descripcion, 
  horario,
  imagen, 
  email, 
  instagram,
  delay = 0 
} = Astro.props;
---

<article class="tallerista-card" style={`animation-delay: ${delay}s`}>
  <div class="tallerista-image">
    <img 
      src={imagen} 
      alt={`FotografÃ­a de ${nombre} - ${especialidad}`}
      loading="lazy"
    />
    <div class="image-overlay"></div>
  </div>
  
  <div class="tallerista-content">
    <header class="tallerista-header">
      <h3 class="tallerista-nombre">{nombre}</h3>
      <span class="tallerista-especialidad">{especialidad}</span>
    </header>
    
    <h4 class="taller-titulo">{tituloTaller}</h4>
    
    <p class="tallerista-descripcion">{descripcion}</p>
    
    <div class="taller-horario">
      <i class="far fa-clock" aria-hidden="true"></i>
      <span>{horario}</span>
    </div>
    
    {(email || instagram) && (
      <footer class="tallerista-social">
        {email && (
          <a 
            href={`mailto:${email}`}
            aria-label={`Correo de ${nombre}`}
          >
            <i class="fas fa-envelope" aria-hidden="true"></i>
          </a>
        )}
        {instagram && (
          <a 
            href={instagram} 
            target="_blank" 
            rel="noopener noreferrer"
            aria-label={`Instagram de ${nombre}`}
          >
            <i class="fab fa-instagram" aria-hidden="true"></i>
          </a>
        )}
      </footer>
    )}
  </div>
</article>

<style>
/* ===================================
   CARD BASE
   =================================== */
.tallerista-card {
    background: var(--white);
    border-radius: 16px;
    box-shadow: 0 4px 15px rgba(0, 30, 80, 0.05);
    border: 1px solid #e0e8f3;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    display: flex;
    flex-direction: column;
    height: 100%;
    animation: fadeInUp 0.5s ease-out backwards;
    overflow: hidden;
}

.tallerista-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 35px rgba(0, 30, 80, 0.1);
}

/* ===================================
   IMAGEN
   =================================== */
.tallerista-image {
    width: 100%;
    height: 250px;
    overflow: hidden;
    position: relative;
}

.tallerista-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    transition: transform 0.4s ease;
}

.tallerista-card:hover .tallerista-image img {
    transform: scale(1.05);
}

/* ===================================
   CONTENIDO
   =================================== */
.tallerista-content {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
    flex-grow: 1;
}

.tallerista-header {
    text-align: center;
    margin-bottom: 0.5rem;
}

.tallerista-nombre {
    font-size: 1.4rem;
    font-weight: 700;
    color: var(--primary-color);
    margin: 0 0 0.25rem 0;
}

.tallerista-especialidad {
    font-size: 0.95rem;
    font-weight: 600;
    color: var(--secondary-color);
}

.taller-titulo {
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--dark-color);
    text-align: center;
    line-height: 1.4;
}

.tallerista-descripcion {
    font-size: 0.95rem;
    color: var(--text-light);
    line-height: 1.7;
    text-align: center;
    flex-grow: 1;
}

.taller-horario {
    background: #f4f7fc;
    border: 1px solid #e0e8f3;
    border-radius: 12px;
    padding: 0.75rem 1rem;
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--text-light);
    text-align: center;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
}

.taller-horario i {
    color: var(--primary-color);
}

.tallerista-social {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-top: auto;
    padding-top: 1rem;
    border-top: 1px solid #e0e8f3;
}

.tallerista-social a {
    width: 38px;
    height: 38px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: transparent;
    border: 1px solid #cdd7e5;
    color: var(--text-light);
    transition: all 0.3s ease;
}

.tallerista-social a:hover {
    background: var(--primary-color);
    color: var(--white);
    border-color: var(--primary-color);
    transform: scale(1.1);
}

/* ===================================
   ANIMACIONES Y RESPONSIVE
   =================================== */
@keyframes fadeInUp {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
}
</style>
