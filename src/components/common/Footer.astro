<footer id="contacto">
  <div class="footer-container">
    <!-- Logos institucionales -->
    <div class="footer-logos">
        <img src="/logos/LOGO-BLANCO.avif" alt="Logo COMIIN 2026" class="footer-logo" loading="lazy" />
        <img src="/logos/marcacuh.avif" alt="Logo CUH" class="footer-logo" loading="lazy" />
      <img src="/logos/UPNHLogo.avif" alt="Logo UPNH" class="footer-logo" loading="lazy" />
    </div>

    <!-- Links del footer -->
    <nav class="footer-links" aria-label="Enlaces del footer">
      <a href="/aviso-privacidad">Aviso de Privacidad</a>
      <a href="/terminos-condiciones">Términos y Condiciones</a>
      <a href="/preguntas-frecuentes">Preguntas Frecuentes</a>
      <a href="/contacto">Contacto</a>
    </nav>

    <!-- Copyright -->
    <div class="copyright">
      <p>
        &copy; {new Date().getFullYear()} Centro Universitario Hidalguense A.C. • Todos los derechos reservados • <strong>COMIIN 2026</strong>
      </p>
    </div>
  </div>
</footer>

<style>
 
  footer {
    background: linear-gradient(180deg, #2c3e50 0%, var(--dark-color) 100%);
    color: var(--white);
    padding: 2.5rem 2rem 1.5rem;
    margin-top: auto;
  }

  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
  }

  /* Logos institucionales */
  .footer-logos {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 2.5rem;
    flex-wrap: wrap;
  }

  .footer-logo {
    height: 100px;
    width: auto;
    object-fit: contain;
    filter: brightness(0) invert(1) drop-shadow(0 2px 8px rgba(255, 255, 255, 0.1));
    transition: var(--transition);
    opacity: 0.9;
  }

  .footer-logo:hover {
    transform: translateY(-3px) scale(1.05);
    filter: brightness(0) invert(1) drop-shadow(0 4px 12px rgba(255, 255, 255, 0.3));
    opacity: 1;
  }

  /* Links del footer */
  .footer-links {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    gap: 1.5rem;
  }

  .footer-links a {
    color: rgba(255, 255, 255, 0.85);
    text-decoration: none;
    font-size: 0.9rem;
    font-weight: 400;
    letter-spacing: 0.3px;
    transition: var(--transition);
    position: relative;
    padding: 0.25rem 0;
  }

  .footer-links a::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--white);
    transition: width 0.3s ease;
  }

  .footer-links a:hover {
    color: var(--white);
  }

  .footer-links a:hover::after {
    width: 100%;
  }

  /* Copyright */
  .copyright {
    text-align: center;
    width: 100%;
    padding-top: 1rem;
    border-top: 1px solid rgba(255, 255, 255, 0.15);
  }

  .copyright p {
    color: rgba(255, 255, 255, 0.7);
    font-size: 0.85rem;
    line-height: 1.6;
    margin: 0;
  }

  .copyright strong {
    color: var(--white);
    font-weight: 600;
    letter-spacing: 0.5px;
  }

  /* ===================================
     Diseño Responsivo
     =================================== */
  
  @media (max-width: 768px) {
    footer {
      padding: 2rem 1.5rem 1.25rem;
    }

    .footer-container {
      gap: 1.25rem;
    }

    .footer-logos {
      gap: 1.5rem;
    }

    .footer-logo {
      height: 45px;
    }

    .footer-links {
      gap: 1rem;
      flex-direction: column;
    }

    .footer-links a {
      font-size: 0.85rem;
    }

    .copyright p {
      font-size: 0.8rem;
      line-height: 1.8;
    }
  }

  /* Accesibilidad */
  @media (prefers-reduced-motion: reduce) {
    .footer-logo,
    .footer-links a {
      transition: none;
      animation: none;
    }
  }
</style>
