<style is:global>
	
	html {
		background-color: #f8f9fa;
	}

	body {
		opacity: 1;
		transition: opacity 0.15s ease-in;
	}

	/* ===================================
	   ESTILOS GLOBALES - Variables y Base
	   =================================== */
	
	:root {
		--primary-color: #013367;
		--secondary-color: #0056b3;
		--accent-color: #25d366;
		--error-color: #dc3545;
		--light-color: #f8f9fa;
		--dark-color: #343a40;
		--text-color: #222;
		--text-light: #555;
		--white: #ffffff;
		--navbar-height: 80px;
		--box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
		--box-shadow-lg: 0 10px 30px rgba(0, 0, 0, 0.15);
		--transition: all 0.3s ease;
		--transition-fast: all 0.2s ease;
	}

	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	html {
		scroll-behavior: smooth;
	}

	body {
		font-family: 'Roboto', sans-serif;
		color: var(--text-color);
		line-height: 1.6;
		overflow-x: hidden;
		width: 100%;
		min-height: 100vh;
	}

	/* Espacio para el navbar fijo */
	body > :first-child {
		margin-top: 95px;
	}

	/* ===================================
	   SCROLLBAR PERSONALIZADA - DISCRETA
	   =================================== */
	
	/* Para navegadores basados en Webkit (Chrome, Safari, Edge) */
	::-webkit-scrollbar {
		width: 1px;
	}

	::-webkit-scrollbar-track {
		background: transparent;
	}

	::-webkit-scrollbar-thumb {
		background: rgba(1, 51, 103, 0.15);
		border-radius: 10px;
	}

	::-webkit-scrollbar-thumb:hover {
		background: rgba(1, 51, 103, 0.3);
	}

	::-webkit-scrollbar-thumb:active {
		background: rgba(1, 51, 103, 0.4);
	}

	/* Para Firefox */
	* {
		scrollbar-width: thin;
		scrollbar-color: rgba(1, 51, 103, 0.15) transparent;
	}

	/* Ajuste para móvil */
	@media (max-width: 768px) {
		body > :first-child {
			margin-top: 70px;
		}

		:root {
			--navbar-height: 70px;
		}

		/* Scrollbar casi invisible en móvil */
		::-webkit-scrollbar {
			width: 4px;
		}

		::-webkit-scrollbar-thumb {
			background: rgba(1, 51, 103, 0.1);
		}

		::-webkit-scrollbar-thumb:hover {
			background: rgba(1, 51, 103, 0.2);
		}
	}

	/* Utilidades globales */
	.section-title {
		text-align: center;
		margin: 3rem 0;
		position: relative;
	}

	.section-title h2 {
		font-size: 2.2rem;
		color: var(--primary-color);
		display: inline-block;
		padding-bottom: 0.5rem;
	}

	.section-title h2::after {
		content: '';
		position: absolute;
		bottom: 0;
		left: 50%;
		transform: translateX(-50%);
		width: 80px;
		height: 3px;
		background-color: var(--primary-color);
	}

	/* Animaciones globales */
	@keyframes fadeIn {
		from { 
			opacity: 0; 
			transform: translateY(20px); 
		}
		to { 
			opacity: 1; 
			transform: translateY(0); 
		}
	}

	@keyframes fadeInUp {
		from {
			opacity: 0;
			transform: translateY(30px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	/* Estilos para links y botones generales */
	a {
		transition: var(--transition);
	}

	button {
		font-family: inherit;
	}
</style>
